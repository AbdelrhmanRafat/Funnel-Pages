---
import type { BlockData, Product } from "../../../../../lib/api/types";

const data: BlockData[] = Astro.props.data;
const product : Product = Astro.props.product;

import { FunnelFreshComponents } from "../../../../../lib/constants/themes";
import FreshProductCosts from "../UI/FreshProductCosts/freshProductCosts.astro";
import FreshBundleOptions from "../UI/FreshBundleOptions/FreshBundleOptions.astro";

---

<div id={FunnelFreshComponents.FreshProductFunnel} class="w-full flex flex-col gap-2">
  <FreshBundleOptions data={data} product={product} />
  <FreshProductCosts hasBundles="true" />
</div>