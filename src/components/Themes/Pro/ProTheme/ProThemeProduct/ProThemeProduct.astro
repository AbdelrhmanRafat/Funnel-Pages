---
import "./ProThemeProduct.css";
import type { BlockData, Product } from "../../../../../lib/api/types";
import { getTranslation } from "../../../../../lib/utils/i18n/translations";
import type { Language } from "../../../../../lib/utils/i18n/translations";
import { ProProductInfoComponents } from "../../../../../lib/constants/themes";
import ProSelectionOptionsWithoutBundles from "../UI/ProSelectionOptionsVariantWithoutBundles/proSelectionOptionsWithoutBundles.astro";
import ProProductCosts from "../UI/ProProductCosts/proProductCosts.astro";
import ProProductGalleryComponent from "../UI/ProProductGallery/ProProductGalleryComponent.astro";
import ProOrderThroughWhatsapp from "../ProOrderThroughWhatsapp/proOrderThroughWhatsapp.astro";
import ProFakeVisitors from "../ProFakeVisitors/ProFakeVisitors.astro";
import ProCoupon from "../ProCoupon/ProCoupon.astro";
import ProProductBundles from "../ProProductBundles/ProProductBundles.astro";
import ProProductHeaderReact from "./ProProductHeaderReact";
import ProThemeFormFields from "../Pro_FormFields/ProThemeFormFields.astro";
import ProOrderConfirmationNotice from "../Pro_OrderConfirmationNotice/ProOrderConfirmationNotice.astro";

// Define render order for product info section - reorder as needed!
const PRODUCT_INFO_RENDER_ORDER = [
  ProProductInfoComponents.Visitores,
  ProProductInfoComponents.ProductHeader,
  ProProductInfoComponents.ProductDescription,
  ProProductInfoComponents.PurchaseOptions,
  ProProductInfoComponents.coupon,
  ProProductInfoComponents.FormFields,
  ProProductInfoComponents.OrderConfirmation,
  ProProductInfoComponents.OrderThroghWhatsapp,
];

// Retrieves product and purchaseOptions from Astro's props.
const product: Product = Astro.props.product;
const purchaseOptions: BlockData = Astro.props.purchaseOptions;
const formFieldsData: BlockData = Astro.props.formFieldsData;
const ratingData: BlockData = Astro.props.ratingData;
const orderThroughWhatsappData: BlockData =
  Astro.props.orderThroughWhatsappData;
const fakeVisitorsData: BlockData = Astro.props.fakeVisitorsData;
const cuponData: BlockData = Astro.props.cuponData;
const orderConfirmationNoticeData: BlockData =
  Astro.props.orderConfirmationNoticeData;

// Extracts color and size options from the product data
const isHaveVariant = product.is_have_variant;
// Get initial language from cookie during SSR
const currentLang: Language = (Astro.cookies.get("lang")?.value ||
  "en") as Language;
const isArabic = currentLang === "ar";

// Helper function to check if component data is available
interface ComponentCheckResult {
  isComponentFound: boolean;
  componentData: any;
}

function isComponentDataAvailable(
  componentType: ProProductInfoComponents,
): ComponentCheckResult {
  switch (componentType) {
    case ProProductInfoComponents.ProductHeader:
      return {
        isComponentFound: !!product,
        componentData: product,
      };
    case ProProductInfoComponents.ProductDescription:
      return {
        isComponentFound:
          !!product && (!!product.description_ar || !!product.description_en),
        componentData: product,
      };
    case ProProductInfoComponents.PurchaseOptions:
      return {
        isComponentFound: !!purchaseOptions,
        componentData: purchaseOptions,
      };
    case ProProductInfoComponents.FormFields:
      return {
        isComponentFound: !!formFieldsData,
        componentData: formFieldsData,
      };
    case ProProductInfoComponents.OrderConfirmation:
      return {
        isComponentFound: !!orderConfirmationNoticeData,
        componentData: orderConfirmationNoticeData,
      };
    case ProProductInfoComponents.OrderThroghWhatsapp:
      return {
        isComponentFound: !!orderThroughWhatsappData,
        componentData: orderThroughWhatsappData,
      };
    case ProProductInfoComponents.coupon:
      return {
        isComponentFound: !!cuponData,
        componentData: cuponData,
      };
    case ProProductInfoComponents.Visitores:
      return {
        isComponentFound: !!fakeVisitorsData,
        componentData: fakeVisitorsData,
      };
    default:
      return {
        isComponentFound: false,
        componentData: null,
      };
  }
}
---

<section id="pro-product-details" class="pro-product-details-section">
  <div class="flex flex-col lg:flex-row gap-5">
    <!-- Gallery Section -->
    {(<ProProductGalleryComponent product={product} />)}

    <!-- Product Info Section with Array-Based Rendering -->
    <div
      class="lg:w-1/2 pro-product-details-container flex flex-col gap-3 justify-center items-center md:px-8 md:py-3 rounded-xl"
    >
      {
        PRODUCT_INFO_RENDER_ORDER.map((componentType) => {
          const componentCheck = isComponentDataAvailable(componentType);

          if (!componentCheck.isComponentFound) {
            return null;
          }

          // Product Header Component with Observer Web Component
          if (componentType === ProProductInfoComponents.ProductHeader) {
            return (
              <div class="w-full">
                <ProProductHeaderReact
                  product={product}
                  purchaseOptions={purchaseOptions}
                  isHaveVariant={isHaveVariant}
                  currentLang={currentLang}
                  ratingData={ratingData}
                  client:visible
                />
              </div>
            );
          }

          // Product Description Component
          if (
            componentType === ProProductInfoComponents.ProductDescription
          ) {
            return (
              <>
                <div class="w-full">
                  <h3
                    class="pro-product-details-description-header text-2xl font-bold pb-3"
                    data-translate="product.description"
                  >
                    {getTranslation("product.description", currentLang)}
                  </h3>
                  <p
                    class="pro-product-details-text-body leading-relaxed"
                    set:html={
                      isArabic ? product.description_ar : product.description_en
                    }
                  />
                </div>
                {!purchaseOptions && (
                  <>
                    <div class="w-full py-3">
                      <ProSelectionOptionsWithoutBundles
                        product={product}
                      />
                    </div>
                    <div class="w-full">
                      <ProProductCosts hasBundles="false" />
                    </div>
                  </>
                )}
              </>
            );
          }

          // Purchase Options Component
          if (componentType === ProProductInfoComponents.PurchaseOptions) {
            return (
              <ProProductBundles
                product={product}
                data={componentCheck.componentData}
              />
            );
          }

          // Coupon Component
          if (componentType === ProProductInfoComponents.coupon) {
            return <ProCoupon data={componentCheck.componentData} />;
          }

          // Form Fields Component
          if (componentType === ProProductInfoComponents.FormFields) {
            return (
              <ProThemeFormFields
                product={product}
                data={componentCheck.componentData}
                purchaseOptions={purchaseOptions}
                isHaveVariant={isHaveVariant}
              />
            );
          }

          // Order Confirmation Component
          if (
            componentType === ProProductInfoComponents.OrderConfirmation
          ) {
            return (
              <ProOrderConfirmationNotice
                data={componentCheck.componentData}
              />
            );
          }

          // Visitors Component
          if (componentType === ProProductInfoComponents.Visitores) {
            return <ProFakeVisitors data={componentCheck.componentData} />;
          }

          // Order Through WhatsApp Component
          if (
            componentType === ProProductInfoComponents.OrderThroghWhatsapp
          ) {
            return (
              <ProOrderThroughWhatsapp
                data={componentCheck.componentData}
              />
            );
          }

          return null;
        })
      }
    </div>
  </div>
</section>

<script>
  import "./ProThemeProduct";
</script>
