---
import type { BlockData, Product } from "../../../../../lib/api/types";

const data: BlockData[] = Astro.props.data;
const product : Product = Astro.props.product;

import { FunnelTroyComponents } from "../../../../../lib/constants/themes";
import TroyProductCosts from "../UI/TroyProductCosts/troyProductCosts.astro";
import TroyBundleOptions from "../UI/TroyBundleOptions/TroyBundleOptions.astro";

---

<div id={FunnelTroyComponents.TroyProductFunnel} class="w-full flex flex-col gap-2">
  <TroyBundleOptions data={data} product={product} />
  <TroyProductCosts hasBundles="true" />
</div>