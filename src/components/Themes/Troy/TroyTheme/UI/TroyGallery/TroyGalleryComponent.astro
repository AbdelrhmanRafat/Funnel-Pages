---
import "./troyGalleryComponent.css";
import type { BlockData, Image } from "../../../../../../lib/api/types";

const data: BlockData = Astro.props.data;
const gallery: Image[] = data.galleryimages ?? [];

// Gallery options
const autoPlay = data.autoPlay ?? false;
const autoPlayDelay = data.autoPlayDelay ?? 5000;
const enableKeyboard = data.enableKeyboard ?? true;
const enableTouch = data.enableTouch ?? true;
---

<!-- Gallery Section - Enhanced -->
<troy-gallery 
    class="lg:w-1/2 lg:sticky lg:top-0 lg:self-start"
    data-gallery-auto-play={autoPlay}
    data-gallery-auto-play-delay={autoPlayDelay}
    data-gallery-enable-keyboard={enableKeyboard}
    data-gallery-enable-touch={enableTouch}
>
    <div class="flex flex-col gap-6">
        <!-- Main Image Display -->
        <div class="relative">
            <div class="troy-gallery-main relative overflow-hidden">
                <img
                    data-gallery-main-image
                    src={gallery[0]?.src}
                    class="troy-main-image w-full h-96 lg:h-[500px] object-cover"
                    alt={gallery[0]?.alt}
                />
                
                <!-- Navigation Buttons -->
                <button
                    data-gallery-prev-btn
                    class="troy-gallery-nav troy-gallery-nav-left absolute top-1/2 -translate-y-1/2 left-4 w-12 h-12 rounded-full flex items-center justify-center border-none cursor-pointer"
                >
                    <svg
                        class="w-6 h-6"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M15 19l-7-7 7-7"></path>
                    </svg>
                </button>
                
                <button
                    data-gallery-next-btn
                    class="troy-gallery-nav troy-gallery-nav-right absolute top-1/2 -translate-y-1/2 right-4 w-12 h-12 rounded-full flex items-center justify-center border-none cursor-pointer"
                >
                    <svg
                        class="w-6 h-6"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 5l7 7-7 7"></path>
                    </svg>
                </button>
                
                <!-- Image Counter -->
                <div class="troy-gallery-counter absolute bottom-4 left-1/2 -translate-x-1/2 py-2 px-4 rounded-full text-sm font-medium border">
                    <span data-gallery-current-index>1</span> / <span data-gallery-total-images>{gallery.length}</span>
                </div>
            </div>
        </div>
        
        <!-- Thumbnail Gallery -->
        <div class="troy-thumbnail-container max-h-96 overflow-x-auto whitespace-nowrap pb-2">
            <div class="inline-flex md:flex-row md:justify-start md:items-start md:flex-wrap gap-3">
                {
                  gallery.map((image, index) => (
                    <img
                        src={image.src}
                        class={`troy-thumbnail w-20 h-20 lg:w-24 lg:h-24 object-cover rounded-xl cursor-pointer border-2 border-transparent ${index === 0 ? 'troy-thumbnail-active' : ''}`}
                        data-gallery-thumbnail
                        data-gallery-index={index}
                        alt={image.alt}
                    />
                  ))
                }
            </div>
        </div>
    </div>
</troy-gallery>

<script>
    import "./troyGalleryComponent";
</script>