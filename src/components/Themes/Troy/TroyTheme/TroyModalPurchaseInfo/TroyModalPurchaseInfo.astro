---
import "./TroyModalPurchaseInfo.css";
import TroyConfirmPurchaseButton from "../UI/TroyConfirmPurchaseButton/TroyConfirmPurchaseButton.astro";
import type { BlockData, Product } from "../../../../../lib/api/types";
import type { Language } from "../../../../../lib/utils/i18n/translations";

const isHaveVariant: string = Astro.props.isHaveVariant;
const purchaseOptions: BlockData = Astro.props.purchaseOptions;
const product : Product = Astro.props.product;
// Get initial language from cookie during SSR
const currentLang: Language = (Astro.cookies.get("lang")?.value ||
  "en") as Language;
const isArabic = currentLang === "ar";

// Determine product option scenarios
const hasVariants = isHaveVariant === "true";
const hasBundles = purchaseOptions !== undefined;
---
<troy-purchase-modal data-has-variants={hasVariants} data-has-bundles={hasBundles}>
  <div
    data-modal-container
    class="troy-modal fixed inset-0 z-[1000] hidden"
  >
    <div
      data-modal-overlay
      class="troy-modal-overlay absolute inset-0 z-[1001]"
    >
    </div>
    <div
      class="troy-modal-container relative container md:w-8/12 lg:w-6/12 max-h-[92vh] overflow-y-auto z-[1002] m-4"
    >
      <!-- Purchase Info View (Default) -->
      <div data-modal-purchase-info-view class="modal-view w-full">
        <!-- Enhanced Header -->
        <div class="troy-modal-header flex justify-between items-center">
          <div class="troy-header-content flex justify-start items-center gap-2">
            <div class="troy-header-accent"></div>
            <h3
              class="troy-modal-title"
              data-translate="modal.purchaseInfo"
            >
            </h3>
          </div>
        </div>

        <div class="troy-modal-body">
          <div class="troy-modal-content">
            <!-- Enhanced Order Summary Section -->
            <div class="troy-purchase-summary">
              <div class="troy-section-header">
                <div class="troy-section-icon troy-icon-summary">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                </div>
                <h4
                  class="troy-section-title"
                  data-translate="modal.orderSummary"
                >
                </h4>
              </div>

              <!-- Enhanced Bundle Information -->
              {hasBundles ? (
                <!-- Bundle-based Bundle Information -->
                <div
                  data-modal-Bundle-info
                  class="troy-summary-section"
                >
                  <div class="troy-summary-grid">
                    <div class="troy-summary-column">
                      <div class="troy-summary-item">
                        <span class="troy-summary-label" data-translate="modal.orderType"></span>
                        <span class="troy-summary-value" data-modal-order-title></span>
                      </div>
                      <div class="troy-summary-item">
                        <span class="troy-summary-label" data-translate="modal.itemsCount"></span>
                        <span class="troy-summary-value" data-modal-items-count></span>
                      </div>
                    </div>
                    <div class="troy-summary-column">
                      <div class="troy-summary-item">
                        <span class="troy-summary-label" data-translate="modal.pricePerItem"></span>
                        <span class="troy-summary-value" data-modal-price-per-item></span>
                      </div>
                      <div class="troy-summary-item">
                        <span class="troy-summary-label" data-translate="modal.discount"></span>
                        <span class="troy-summary-value troy-discount-info" data-modal-discount-info></span>
                      </div>
                    </div>
                  </div>
                </div>
              ) : (
                <!-- Non-Bundle Direct Purchase Information -->
                <div
                  data-modal-direct-purchase-info
                  class="troy-summary-section troy-direct-purchase-section"
                >
                  <div class="troy-section-header">
                    <div class="troy-section-icon troy-icon-direct">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                      </svg>
                    </div>
                    <h5 class="troy-subsection-title" data-translate="modal.directPurchaseDetails"></h5>
                  </div>

                  <!-- Direct Purchase Items List -->
                  <div
                    data-modal-direct-items-container
                    class="troy-direct-items-list"
                  >
                    <!-- Dynamic content populated by JavaScript -->
                  </div>

                  <!-- Direct Purchase Summary -->
                  <div class="troy-direct-summary">
                    <div class="troy-direct-summary-item">
                      <span class="troy-summary-label" data-translate="modal.totalQuantity"></span>
                      <span class="troy-summary-value" data-modal-total-quantity></span>
                    </div>
                    <div class="troy-direct-summary-item">
                      <span class="troy-summary-label" data-translate="modal.subtotal"></span>
                      <span class="troy-summary-value" data-modal-subtotal></span>
                    </div>
                    <div class="troy-direct-summary-item">
                      <span class="troy-summary-label" data-translate="modal.totalDiscount"></span>
                      <span class="troy-summary-value troy-discount-info" data-modal-total-discount></span>
                    </div>
                    <div class="troy-direct-summary-item">
                      <span class="troy-summary-label" data-translate="modal.finalTotal"></span>
                      <span class="troy-summary-value" data-modal-summary-final-total></span>
                    </div>
                  </div>
                </div>
              )}

              <!-- Enhanced Product Options Section -->
              <!-- Show only when product has variants (scenarios 1 & 2) -->
              {hasVariants && hasBundles && (
                <div
                  data-modal-color-size-info
                  class="troy-summary-section troy-options-section"
                >
                  <div class="troy-section-header">
                    <div class="troy-section-icon troy-icon-options">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"></path>
                      </svg>
                    </div>
                    <h5 class="troy-subsection-title">
                      <span data-translate={hasBundles ? "modal.bundleOptions" : "modal.productOptions"}></span>
                    </h5>
                  </div>
                  
                  <div
                    data-modal-selection-items
                    class="troy-selection-items flex flex-col gap-2"
                  >
                    <!-- Dynamic content populated by JavaScript -->
                  </div>
                  
                </div>
              )}

              <!-- Enhanced Customer Information -->
              <div
                data-modal-customer-info
                class="troy-summary-section troy-customer-section"
              >
                <div class="troy-section-header">
                  <div class="troy-section-icon troy-icon-customer">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                  </div>
                  <h5 class="troy-section-title" data-translate="modal.customerInfo"></h5>
                </div>
                
                <div class="troy-customer-details">
                  <div class="troy-customer-grid">
                    <div class="troy-customer-column">
                      <div class="troy-customer-field">
                        <span class="troy-field-label" data-translate="modal.fullName"></span>
                        <span class="troy-field-value" data-modal-customer-name></span>
                      </div>
                      <div class="troy-customer-field">
                        <span class="troy-field-label" data-translate="modal.phone"></span>
                        <span class="troy-field-value" data-modal-customer-phone></span>
                      </div>
                      <div class="troy-customer-field">
                        <span class="troy-field-label" data-translate="modal.email"></span>
                        <span class="troy-field-value" data-modal-customer-email></span>
                      </div>
                    </div>
                    <div class="troy-customer-column">
                      <div class="troy-customer-field">
                        <span class="troy-field-label" data-translate="modal.address"></span>
                        <span class="troy-field-value" data-modal-customer-address></span>
                      </div>
                      <div class="troy-customer-field">
                        <span class="troy-field-label" data-translate="modal.city"></span>
                        <span class="troy-field-value" data-modal-customer-city></span>
                      </div>
                      <div class="troy-customer-field">
                        <span class="troy-field-label" data-translate="modal.paymentMethod"></span>
                        <span class="troy-field-value" data-modal-payment-method></span>
                      </div>
                        <div class="troy-customer-field">
                        <span class="troy-field-label" data-translate="modal.deliveryMethod"></span>
                        <span class="troy-field-value" data-modal-delivery-method></span>
                      </div>
                    </div>
                  </div>
                  
                  <div
                    class="troy-customer-field troy-notes-field"
                    data-modal-notes-section
                  >
                    <span class="troy-field-label" data-translate="modal.notes"></span>
                    <span class="troy-field-value" data-modal-customer-notes></span>
                  </div>
                </div>
              </div>

              <!-- Enhanced Total Section -->
              <div class="troy-summary-total">
                <div class="troy-total-content">
                  <div class="troy-total-icon">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                    </svg>
                  </div>
                  <span class="troy-total-label" data-translate="modal.finalTotal"></span>
                  <span class="troy-total-value" data-modal-final-total></span>
                </div>
              </div>
            </div>

            <!-- Enhanced Action Buttons -->
            <div class="troy-modal-actions">
              <TroyConfirmPurchaseButton />
              <button
                type="button"
                class="troy-modal-cancel"
                data-modal-cancel-button
                data-translate="modal.cancel"
              >
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Enhanced Celebration View -->
      <div
        data-modal-celebration-view
        class="modal-view troy-celebration-view"
        style="display: none;"
      >
        <div class="troy-modal-header troy-celebration-header">
          <div class="troy-celebration-header-content">
            <div class="troy-celebration-icon">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <h3
              class="troy-celebration-title"
              data-translate="celebration.orderConfirmed"
            >
            </h3>
          </div>
        </div>

        <div class="troy-modal-body">
          <div class="troy-celebration-content">
            <!-- Enhanced Success Animation -->
            <div class="troy-celebration-animation">
              <div class="troy-success-checkmark">
                <div class="troy-check-icon">
                </div>
              </div>
            </div>

            <!-- Enhanced Thank You Message -->
            <div class="troy-celebration-message">
              <h2
                class="troy-celebration-main-title"
                data-translate="celebration.thankYou"
              >
              </h2>
              <p
                class="troy-celebration-subtitle"
                data-translate="celebration.detailsMessage"
              >
              </p>
            </div>

            <!-- Enhanced Order Summary -->
            <div class="troy-celebration-summary">
              <div class="troy-celebration-items">
                <div class="troy-celebration-summary-item">
                  <div class="troy-celebration-item-icon troy-icon-order">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                    </svg>
                  </div>
                  <div class="troy-celebration-item-text">
                    <strong data-translate="celebration.orderNumber"></strong>
                    <span data-modal-order-number></span>
                  </div>
                </div>
                
                <div class="troy-celebration-summary-item">
                  <div class="troy-celebration-item-icon troy-icon-delivery">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <div class="troy-celebration-item-text">
                    <strong data-translate="celebration.expectedDelivery"></strong>
                    <span data-translate="celebration.deliveryTime"></span>
                  </div>
                </div>
                
                <div class="troy-celebration-summary-item">
                  <div class="troy-celebration-item-icon troy-icon-contact">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                  </div>
                  <div class="troy-celebration-item-text">
                    <strong data-translate="celebration.contactYou"></strong>
                    <span data-translate="celebration.contactTime"></span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Enhanced Actions -->
            <div class="troy-celebration-actions">
              <button
                type="button"
                class="troy-celebration-primary-button"
                data-modal-celebration-continue-button
                data-translate="celebration.continueShopping"
              >
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</troy-purchase-modal>

<script>
  import "./TroyModalPurchaseInfo";
</script>