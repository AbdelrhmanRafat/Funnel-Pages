---
import "./NasaProductFeatures.css"
import type { BlockData, Features } from "../../../../../lib/api/types";
import { FunnelNasaComponents } from "../../../../../lib/constants/themes";

const data: BlockData = Astro.props.data;
const productFeatures: Features[] = data.features ?? [];
---

<section id={FunnelNasaComponents.NasaProductFeatures} class="nasa-section">
  <!-- Header -->
  <div class="nasa-section-header">
    <i class={data.icon}></i>
    <h5>{data.title}</h5>
  </div>
  
  <!-- Features Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    {
      productFeatures.map((feature, index) => (
        <div class="nasa-feature-card p-6 text-center rounded-2xl">
          <!-- Feature Icon -->
          <div class="nasa-feature-icon-container w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class={`${feature.icon} nasa-feature-icon text-2xl`} />
          </div>
                    
          <!-- Feature Content -->
          <h3 class="nasa-feature-title font-semibold text-lg mb-2">
            {feature.title}
          </h3>
          <p class="nasa-feature-subtitle text-sm">
            {feature.subtitle}
          </p>
        </div>
      ))
    }
  </div>
</section>