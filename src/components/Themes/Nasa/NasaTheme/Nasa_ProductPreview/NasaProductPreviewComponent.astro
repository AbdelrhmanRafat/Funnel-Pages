---
// This component renders a preview of the product for the nasa theme.
// Props:
// - data: An object of type BlockData, containing product preview information.
import "./nasaProductPreviewComponent.css"
import type { BlockData, ProductPreview } from "../../../../../lib/api/types";
import nasaBuyNowButton from "../UI/nasaBuyNowButton/nasaBuyNowButton.astro";

const data: BlockData = Astro.props.data;
const productPreview: ProductPreview = data.productPreview ?? {} as ProductPreview;
---

<section id="nasa-product-preview" class="nasa-section">
    <!-- Header -->
    <div class="nasa-section-header">
        <i class={productPreview.headerBadgeIcon}></i>
        <h5>{productPreview.headerBadgetext}</h5>
    </div>

    <!-- Main Content -->
    <div class="flex flex-col lg:flex-row gap-6 lg:gap-8 items-stretch">
        <!-- Video Section (3/5 width on desktop) -->
        <div class="w-full lg:w-3/5 order-2 lg:order-1">
            <div class="nasa-product-video-container nasa-product-video-height border-4 rounded-xl overflow-hidden relative">
                <iframe
                    class="w-full h-full rounded-[inherit]"
                    src={productPreview.videoInfo.link}
                    title="YouTube video player"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen>
                </iframe>
                <div class="nasa-product-video-title absolute bottom-9 right-2 text-3xl font-bold z-10">
                    <p>{productPreview.videoInfo.title}</p>
                </div>
            </div>
        </div>
                
        <!-- Features Section (2/5 width on desktop) -->
        <div class="w-full lg:w-2/5 order-1 lg:order-2">
            <div class="nasa-product-features-container h-full flex flex-col rounded-xl p-6">
                <!-- Features Header -->
                <div class="nasa-product-features-header border-b pb-3">
                    <div class="flex flex-col gap-3 sm:flex-row sm:justify-between sm:items-center sm:gap-4">
                        <h2 class="nasa-product-features-title text-2xl font-bold">
                            {productPreview.featuresSectionTitle}
                        </h2>
                        <div class="nasa-product-views-badge flex-shrink-0 py-1 px-4 rounded-2xl flex items-center gap-2 text-lg max-w-full">
                            <div class="flex-shrink-0">
                                <i class={productPreview.viewsIcon}></i>
                            </div>
                            <span class="truncate">{productPreview.viewsText}</span>
                        </div>
                    </div>
                </div>
                                
                <!-- Feature List -->
                <div class="flex-1 py-6">
                    <div class="space-y-6 lg:space-y-8">
                        {
                            productPreview.features.map((feature) => (
                                <div class="nasa-product-feature-item flex items-start gap-3">
                                    <div class="nasa-product-feature-icon rounded-full p-2 flex-shrink-0 flex items-center justify-center mt-0.5">
                                        <i class="fa-solid fa-circle-check w-5 h-5"></i>
                                    </div>
                                    <div class="nasa-product-feature-content flex-1 min-w-0 text-right">
                                        <div class="nasa-product-feature-title font-semibold leading-snug">{feature.title}</div>
                                        <div class="nasa-product-feature-subtitle text-sm leading-snug mt-1">
                                            {feature.subtitle}
                                        </div>
                                    </div>
                                </div>
                            ))
                        }
                    </div>
                </div>
                                
                <!-- Buy Now Button -->
                <div class="mt-auto pt-4 border-t border-current/10">
                    <nasaBuyNowButton />
                </div>
            </div>
        </div>
    </div>
</section>