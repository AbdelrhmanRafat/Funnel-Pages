---
// ProductImageSection.astro
import "./nasaImageTextBeside.css"
import type { BlockData } from "../../../../../lib/api/types";
import NasaBuyNowButton from "../UI/nasaBuyNowButton/nasaBuyNowButton.astro";

const data: BlockData = Astro.props.data;
---

<section id="nasa-text-image-beside" class="nasa-section px-4 sm:px-6 lg:px-12 py-12">
  <!-- Header -->
  <div class="nasa-section-header">
    <i class="fa-solid fa-images"></i>
    <h5>{data.title}</h5>
  </div>
  
  <!-- Product Grid -->
  <div class="nasa-image-text-beside grid grid-cols-1 lg:grid-cols-2 gap-6 items-start rounded-2xl overflow-hidden">
    
    <!-- Image Section -->
    <div class="h-64 sm:h-96 overflow-hidden">
      <img 
        src={data.image?.src}
        alt={data.image?.alt}
        class="w-full h-full object-cover rounded-2xl"
      />
    </div>
    
    <!-- Text Section -->
    <div class="nasa-image-text-beside-content flex flex-col justify-start items-start w-full gap-2 p-6 sm:p-10 space-y-6 text-right backdrop-blur-sm bg-white/80 shadow-lg rounded-2xl h-full">
      <h2 class="nasa-image-text-beside-title text-3xl font-bold">
        {data.subtitle}
      </h2>
      <p class="nasa-image-text-beside-description text-base leading-relaxed">
        {data.description}
      </p>
      <div class="flex-1"></div>
      <NasaBuyNowButton />
    </div>
  </div>
  
</section>