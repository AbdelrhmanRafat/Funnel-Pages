---
import "./NasaDeliveryFeatures.css"
import type { BlockData, Features } from "../../../../../lib/api/types";
import { FunnelNasaComponents } from "../../../../../lib/constants/themes";

const data: BlockData = Astro.props.data;
const deliveryFeatures: Features[] = data.features ?? [];
---

<section id={FunnelNasaComponents.NasaDeliveryFeatures} class="nasa-section">
  <!-- Header -->
  <div class="nasa-section-header">
    <i class={data.icon}></i>
    <h5>{data.title}</h5>
  </div>
  <!-- Delivery Features Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    {
      deliveryFeatures.map((feature) => (
        <div class="flex flex-col justify-center items-center gap-2 p-4">
          <!-- Feature Icon -->
          <div>
            <i class={`${feature.icon} nasa-delivery-icon text-4xl`} />
          </div>
          <!-- Feature Content -->
          <h3 class="nasa-delivery-title font-semibold text-lg leading-tight">
            {feature.title}
          </h3>
          <p class="nasa-delivery-subtitle text-sm leading-relaxed">
            {feature.subtitle}
          </p>
        </div>
      ))
    }
  </div>
</section>