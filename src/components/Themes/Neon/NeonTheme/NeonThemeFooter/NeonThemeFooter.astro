---
import "./NeonThemeFooter.css";
import type { BlockData, Item } from "../../../../../lib/api/types";
import { FunnelNeonComponents } from "../../../../../lib/constants/themes";
import LucideIcon from "../../../../Shared/LucideIcon.astro";

const data: BlockData = Astro.props.data;
const items: Item[] = data.items ?? [];

const policies: Item[] = items.filter(item => !item.icon);
const social_icons: Item[] = items.filter(item => !!item.icon);
---
<footer id={FunnelNeonComponents.NeonFooter} class="neon-footer w-full py-8 md:py-12 border-t-2">
  <div class="neon-footer-content flex flex-col md:flex-row justify-between items-center gap-8 md:gap-4">
    
        <!-- Company Info Section -->
    <div class="flex flex-col items-center md:items-end gap-4">
      <div class="flex items-center gap-2">
        <LucideIcon name={data.icon as any} width="24" height="24" />
        <h5 class="neon-footer-title text-xl font-bold">{data.title_ar}</h5>
      </div>
      <div class="text-center md:text-right">
        <p class="text-sm opacity-80">{data.title_en}</p>
        <p class="text-xs opacity-60">{data.description}</p>
      </div>
    </div>

    <!-- Social Media Section -->
    <div class="flex flex-col items-center md:items-start gap-4">
      <div class="neon-footer-social flex gap-4">
        {social_icons.filter(item => item.icon && !item.label).map((item, index) => (
          <a href={item.link || "#"} class="neon-footer-social-link p-2 rounded-full transition-all duration-200 hover:scale-110" aria-label={`social-${index}`}>
            <LucideIcon name={item.icon as any} width="24" height="24" />
          </a>
        ))}
      </div>
    </div>

    <!-- Quick Links Section -->
    <div class="flex flex-col items-center gap-4">
      <div class="neon-footer-links flex flex-col items-center gap-2 text-sm">
        {policies.filter(item => item.label).map((item) => (
          <a href="#" class="neon-footer-link transition-colors duration-200 hover:underline">{item.label}</a>
        ))}
      </div>
    </div>
  </div>
</footer>