---
import type { BlockData, Product } from "../../../../../lib/api/types";

const data: BlockData[] = Astro.props.data;
const product : Product = Astro.props.product;

import { FunnelNeonComponents } from "../../../../../lib/constants/themes";
import NeonProductCosts from "../UI/NeonProductCosts/neonProductCosts.astro";
import NeonBundleOptions from "../UI/NeonBundleOptions/NeonBundleOptions.astro";

---

<div id={FunnelNeonComponents.NeonProductFunnel} class="w-full flex flex-col gap-2">
  <NeonBundleOptions data={data} product={product} />
  <NeonProductCosts hasBundles="true" />
</div>