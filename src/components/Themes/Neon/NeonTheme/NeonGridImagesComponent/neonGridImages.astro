---
import "./neonGridImages.css";
import type { BlockData, Item } from "../../../../../lib/api/types";
import type { Language } from "../../../../../lib/utils/i18n/translations";
import { FunnelNeonComponents } from "../../../../../lib/constants/themes";
import NeonBuyNowButton from "../UI/NeonBuyNowButton/NeonBuyNowButton.astro";
import LucideIcon from "../../../../Shared/LucideIcon.astro";

// Get initial language from cookie during SSR
const currentLang: Language = (Astro.cookies.get("lang")?.value || "ar") as Language;
const isArabic = currentLang === "ar";

const data: BlockData = Astro.props.data;
const galleryImages: Item[] = data.items ?? [];
---

<neon-fade-in-gallery>
<section id={FunnelNeonComponents.NeonGallery} class="neon-section">
  <!-- Section Header -->
  <div class="neon-section-header">
    {data.icon && <LucideIcon name={data.icon as any} width="40" height="40" />}
    <h3>
      {isArabic ? data.title_ar : data.title_en}
    </h3>
  </div>

  <!-- Masonry Grid -->
  <div class="flex flex-col justify-center items-center gap-8">
    <div class="columns-2  md:columns-3 lg:columns-4 gap-4 sm:gap-5 md:gap-6 w-full">
      {galleryImages.map((image, index) => {
        const ratioClass =
          index % 3 === 0
            ? "aspect-square"
            : index % 3 === 1
            ? "aspect-[3/4]"
            : "aspect-[4/3]";
        return (
          <div class="mb-4 break-inside-avoid group cursor-pointer w-full">
            <div class={`relative overflow-hidden rounded-xl shadow-lg neon-surface transition-transform duration-500 transform hover:-translate-y-1 hover:scale-[1.02]`}>
              
              {/* Image Container with Aspect Ratio */}
              <div class={ratioClass}>
                <img
                  src={image.image}
                  alt={image.label}
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                  loading="lazy"
                />
              </div>

              {/* Label Overlay */}
              <div class="neon-gallery-label absolute bottom-0 left-0 right-0 p-2 sm:p-3 text-[0.75rem] sm:text-sm md:text-base">
                <p class="font-medium line-clamp-1">{image.label}</p>
              </div>
            </div>
          </div>
        );
      })}
    </div>

    <!-- CTA Button -->
    <div class="mt-4 sm:mt-6 md:mt-10">
      <NeonBuyNowButton />
    </div>
  </div>
</section>

</neon-fade-in-gallery>

<script>
    import "./neonGridImages";
</script>