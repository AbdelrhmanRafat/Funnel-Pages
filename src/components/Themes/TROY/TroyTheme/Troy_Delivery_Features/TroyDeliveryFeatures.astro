---
import "./TroyDeliveryFeatures.css"
import type { BlockData, Features } from "../../../../../lib/api/types";

const data: BlockData = Astro.props.data;
const deliveryFeatures: Features[] = data.features ?? [];
---

<section id="troy-delivery-features" class="troy-section">
  <!-- Header -->
  <div class="troy-section-header">
    <i class={data.icon}></i>
    <h5>{data.title}</h5>
  </div>
  
  <!-- Delivery Features Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    {
      deliveryFeatures.map((feature) => (
        <div class="flex flex-col justify-center items-center gap-2 p-4">
          <!-- Feature Icon -->
          <div class="troy-delivery-icon-container w-16 h-16 rounded-full flex items-center justify-center mx-auto">
            <i class={`${feature.icon} troy-delivery-icon text-4xl`} />
          </div>
                    
          <!-- Feature Content -->
          <h3 class="troy-delivery-title font-semibold text-lg leading-tight">
            {feature.title}
          </h3>
          <p class="troy-delivery-subtitle text-sm leading-relaxed">
            {feature.subtitle}
          </p>
        </div>
      ))
    }
  </div>
</section>