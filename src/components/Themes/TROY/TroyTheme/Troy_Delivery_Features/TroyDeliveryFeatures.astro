---
import "./TroyDeliveryFeatures.css"
import type { BlockData, Features } from "../../../../../lib/api/types";

const data: BlockData = Astro.props.data;
const deliveryFeatures: Features[] = data.features ?? [];
---

<section id="troy-delivery-features" class="troy-section">
  
  <!-- Header with Pure Tailwind Layout -->
  <div class="text-center mb-12">
    <div class="inline-flex items-center justify-center w-20 h-20 rounded-2xl mb-6 shadow-lg troy-header-icon-bg">
      <i class={`${data.icon} text-4xl troy-header-icon`}></i>
    </div>
    <h2 class="text-3xl lg:text-4xl font-bold mb-4 troy-main-title">
      {data.title}
    </h2>
    <div class="w-24 h-1 mx-auto troy-accent-line"></div>
  </div>

  <!-- Features Grid - Pure Tailwind Layout -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-8 lg:gap-10">
    {
      deliveryFeatures.map((feature, index) => (
        <div class={`troy-feature-card group ${
          index === 0 ? 'md:col-span-2 lg:col-span-1 xl:col-span-2' : 
          index === deliveryFeatures.length - 1 ? 'md:col-span-2 lg:col-span-1 xl:col-span-2' : 
          'md:col-span-1 lg:col-span-1 xl:col-span-1'
        }`}>
          
          <!-- Card Container - Tailwind Layout -->
          <div class="relative rounded-2xl p-8 h-full border shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 troy-feature-card-bg">
            
            <!-- Decorative Corner Element - Tailwind Positioning -->
            <div class="absolute top-0 right-0 w-16 h-16 rounded-bl-3xl rounded-tr-2xl troy-corner-decoration"></div>
            
            <!-- Feature Icon - Tailwind Layout -->
            <div class="relative z-10 mb-6">
              <div class="troy-delivery-icon-container group-hover:scale-110 transition-transform duration-300">
                <div class="w-20 h-20 rounded-2xl flex items-center justify-center shadow-lg mx-auto troy-icon-bg">
                  <i class={`${feature.icon} text-3xl troy-icon-color`}></i>
                </div>
              </div>
            </div>
            
            <!-- Feature Content - Tailwind Layout -->
            <div class="text-center space-y-4">
              <h3 class="text-xl font-bold leading-tight group-hover:opacity-80 transition-colors duration-300 troy-feature-title">
                {feature.title}
              </h3>
              <p class="text-base leading-relaxed font-medium troy-feature-subtitle">
                {feature.subtitle}
              </p>
            </div>
            
            <!-- Bottom Accent Line - Tailwind Positioning -->
            <div class="absolute bottom-0 left-0 right-0 h-1 rounded-b-2xl transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 troy-bottom-accent"></div>
          </div>
        </div>
      ))
    }
  </div>
</section>