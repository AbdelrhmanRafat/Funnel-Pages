---
import "./TroyDeliveryFeatures.css"
import type { BlockData, Features } from "../../../../../lib/api/types";

const data: BlockData = Astro.props.data;
const deliveryFeatures: Features[] = data.features ?? [];
---

<section id="troy-delivery-features" class="troy-section">
  <!-- Enhanced Header with Decorative Elements -->
  <div class="text-center mb-12">
    <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-amber-100 to-orange-100 rounded-2xl mb-6 shadow-lg">
      <i class={`${data.icon} text-4xl text-amber-700`}></i>
    </div>
    <h2 class="troy-middle-title text-3xl lg:text-4xl font-bold text-amber-900 mb-4">
      {data.title}
    </h2>
    <div class="w-24 h-1 bg-gradient-to-r from-transparent via-amber-600 to-transparent mx-auto"></div>
  </div>

  <!-- Premium Features Grid - Asymmetric Layout -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-8 lg:gap-10">
    {
      deliveryFeatures.map((feature, index) => (
        <div class={`troy-feature-card group ${
          index === 0 ? 'md:col-span-2 lg:col-span-1 xl:col-span-2' : 
          index === deliveryFeatures.length - 1 ? 'md:col-span-2 lg:col-span-1 xl:col-span-2' : 
          'md:col-span-1 lg:col-span-1 xl:col-span-1'
        }`}>
          <!-- Card Background with Gradient -->
          <div class="relative bg-gradient-to-br from-amber-50 to-orange-50 rounded-2xl p-8 h-full border border-amber-200 shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-2">
            
            <!-- Decorative Corner Element -->
            <div class="absolute top-0 right-0 w-16 h-16 bg-gradient-to-bl from-amber-600 to-transparent rounded-bl-3xl rounded-tr-2xl opacity-10"></div>
            
            <!-- Feature Icon -->
            <div class="relative z-10 mb-6">
              <div class="troy-delivery-icon-container group-hover:scale-110 transition-transform duration-300">
                <div class="w-20 h-20 bg-gradient-to-br from-amber-600 to-orange-600 rounded-2xl flex items-center justify-center shadow-lg mx-auto">
                  <i class={`${feature.icon} text-3xl text-white drop-shadow-sm`}></i>
                </div>
              </div>
            </div>
            
            <!-- Feature Content -->
            <div class="text-center space-y-4">
              <h3 class="troy-delivery-title text-xl font-bold leading-tight text-amber-900 group-hover:text-amber-800 transition-colors duration-300">
                {feature.title}
              </h3>
              <p class="troy-delivery-subtitle text-base leading-relaxed text-amber-700 font-medium">
                {feature.subtitle}
              </p>
            </div>
            
            <!-- Bottom Accent Line -->
            <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-amber-600 to-orange-600 rounded-b-2xl transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></div>
          </div>
        </div>
      ))
    }
  </div>

  <!-- Additional Trust Indicators -->
  <div class="mt-16 pt-8 border-t border-amber-200">
    <div class="flex flex-wrap justify-center items-center gap-8 text-center">
      <div class="flex items-center gap-3 text-amber-800">
        <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
        <span class="font-semibold text-lg">خدمة نشطة 24/7</span>
      </div>
      <div class="flex items-center gap-3 text-amber-800">
        <div class="w-3 h-3 bg-amber-500 rounded-full"></div>
        <span class="font-semibold text-lg">توصيل مضمون</span>
      </div>
      <div class="flex items-center gap-3 text-amber-800">
        <div class="w-3 h-3 bg-blue-500 rounded-full"></div>
        <span class="font-semibold text-lg">دعم فني متخصص</span>
      </div>
    </div>
  </div>
</section>