---
import "./TroyFaq.css";
import type { BlockData, Faqs } from "../../../../../lib/api/types";

const data: BlockData = Astro.props.data;
const faqs : Faqs[] = data.faqs ?? [];
---

<!-- FAQ Section Component for Astro -->
<section id="troy-faq" class="troy-section">
    <!-- Header -->
    <div class="troy-section-header">
        <i class={data.icon}></i>
        <h5>{data.title}</h5>
    </div>
    
    <!-- FAQ Items -->
    <div class="flex flex-col gap-4">
        {
            faqs.map((faq, index) => (
                <div class="troy-faq-item overflow-hidden">
                    <button
                        class="troy-faq-question w-full p-6 flex items-center justify-between bg-transparent border-none cursor-pointer"
                        data-faq-index={index}
                    >
                        <span class="troy-faq-question-text font-medium">
                            {faq.question}
                        </span>
                        <span class="troy-faq-icon text-xl font-light">
                            +
                        </span>
                    </button>
                    <div
                        class="troy-faq-answer px-6 max-h-0 overflow-hidden"
                        data-answer-index={index}
                    >
                        <div class="troy-faq-answer-content leading-relaxed py-2">
                            {faq.answer}
                        </div>
                    </div>
                </div>
            ))
        }
    </div>
</section>

<script>
    import "./TroyFaq";
</script>