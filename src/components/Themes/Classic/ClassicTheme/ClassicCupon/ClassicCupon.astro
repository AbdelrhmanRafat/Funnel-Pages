---
import "./ClassicCupon.css";
import type { BlockData, Visitor } from '../../../../../lib/api/types';
import { FunnelClassicComponents } from "../../../../../lib/constants/themes";

const data: BlockData = Astro.props.data;
---

<section id={FunnelClassicComponents.ClassicCoupon} class="classic-section w-full">
  <!-- Section Header -->
  <div class="classic-section-header">
    <i class="fa-solid fa-ticket"></i>
    <h5>{data.title}</h5>
  </div>
  
  <!-- Coupon Container -->
  <div class="flex justify-center items-center gap-3 flex-wrap">
    <div class="classic-coupon-card px-4 py-2 rounded-lg border-2 border-dashed text-center">
      <span class="classic-coupon-code text-lg font-semibold tracking-wide">
        {data.coupon}
      </span>
    </div>
    
    <button class="classic-coupon-copy flex items-center gap-2 px-3 py-2 rounded text-sm font-medium transition-all duration-200" onclick="copyCoupon()" id="copyBtn">
      <i class="fa-solid fa-copy text-xs"></i>
      <span>نسخ</span>
    </button>
  </div>
</section>

<script>
  import "./ClassicCupon";
</script>