---
import type { BlockData, Review } from "../../../../../lib/api/types";
import ClassicBuyNowButton from "../UI/ClassicBuyNowButton/ClassicBuyNowButton.astro";

const data: BlockData = Astro.props.data;
const reviews : Review[] = data.reviews;
---

<section id="classic-reviews" class="classic-section">
  <div class="flex flex-col justify-center items-center gap-7">
  <!-- Header Section -->
  <div class="text-center">
    <h5 class="text-3xl font-bold text-gray-800 mb-4">{data.title}</h5>
    <p class="text-gray-600 text-lg">{data.subtitle}</p>
  </div>

  <!-- CTA Button -->
  <ClassicBuyNowButton />
   

  <!-- Reviews Grid -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    {reviews.map((review) => (
      <div class="bg-white rounded-2xl p-6 shadow-lg">
        <div class="text-gray-700 leading-relaxed mb-6">
          {review.description}
        </div>
        <div class="flex items-center">
          <div class="w-12 h-12 rounded-full bg-white shadow-2xl flex items-center justify-center ml-3">
            <img
              src={review.image}
              alt={`Profile of ${review.name}`}
              class="w-10 h-10 rounded-full object-cover"
            />
          </div>
          <div>
            <div class="font-semibold text-gray-800">{review.name}</div>
            <div class="text-purple-600 text-sm">{review.city}</div>
          </div>
        </div>
      </div>
    ))}
  </div>
  </div>
</section>