---
import "./ClassicFaq.css";
import type { BlockData } from "../../../../../lib/api/types";

const data: BlockData = Astro.props.data;
---

<!-- FAQ Section Component for Astro -->
<section id="classic-faq" class="classic-section">
    <!-- Header -->
    <div class="classic-section-header">
        <i class={data.icon}></i>
        <h5>{data.title}</h5>
    </div>
    
    <!-- FAQ Items -->
    <div class="classic-faq-container">
        {
            data.faqs.map((faq, index) => (
                <div class="classic-faq-item">
                    <button
                        class="classic-faq-question"
                        data-faq-index={index}
                    >
                        <span class="classic-faq-question-text">
                            {faq.question}
                        </span>
                        <span class="classic-faq-icon">
                            +
                        </span>
                    </button>
                    <div
                        class="classic-faq-answer"
                        data-answer-index={index}
                    >
                        <div class="classic-faq-answer-content">
                            {faq.answer}
                        </div>
                    </div>
                </div>
            ))
        }
    </div>
</section>

<script>
    import "./ClassicFaq";
</script>
