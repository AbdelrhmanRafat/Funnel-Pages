---
import type { BlockData, OptionOption } from "../../../../../lib/api/types";
import DynamicPannelContainer from "../UI/Dynamic Panel Container/DynamicPannelContainer.astro";
import QuantityOptions from "../UI/Quantity Options/QuantityOptions.astro";

const data: BlockData = Astro.props.data;
const colorSizeOptions : OptionOption[] = Astro.props.colorSizeOptions;
---

<!-- Quantity Selection -->
<div class="mb-8">
  <QuantityOptions data = {data} />
  <DynamicPannelContainer data={data} colorSizeOptions={colorSizeOptions} />
</div>

<!-- Price Summary -->
        <!-- Main Receipt Items -->
        <div class="p-6 space-y-3">
          <!-- Product -->
          <div class="flex justify-between items-center py-2 border-b border-gray-100">
              <span class="text-gray-700 font-medium">المنتج::</span>
              <span class="text-gray-900 font-semibold">٣ ٣ قطعة</span>
          </div>
          
          <!-- Unit Price -->
          <div class="flex justify-between items-center py-2 border-b border-gray-100">
              <span class="text-gray-700 font-medium">سعر القطعة::</span>
              <span class="text-gray-900 font-semibold">١٤٩٩ ج.م</span>
          </div>
          
          <!-- Subtotal -->
          <div class="flex justify-between items-center py-2 border-b border-gray-100">
              <span class="text-gray-700 font-medium">المجموع:</span>
              <span class="text-gray-900 font-semibold">٤٤٩٧ ج.م</span>
          </div>
          
          <!-- Shipping -->
          <div class="flex justify-between items-center py-2 border-b border-gray-100">
              <span class="text-gray-700 font-medium">الشحن::</span>
              <span class="text-gray-900 font-semibold">٩٠ ج.م</span>
          </div>
          
          <!-- Discount -->
          <div class="flex justify-between items-center py-2 border-b border-gray-200">
              <span class="text-gray-700 font-medium">الخصم::</span>
              <span class="text-green-600 font-semibold">- ٣٢٧٣ ج.م</span>
          </div>
      </div>
      
      <!-- Total Section -->
      <div class="bg-blue-50 px-6 py-4 border-t-2 border-blue-200 mb-3">
          <div class="flex justify-between items-center">
              <span class="text-blue-800 font-bold text-lg">الإجمالي::</span>
              <span class="text-blue-900 font-bold text-xl">٤٠٥٨٧ ج.م</span>
          </div>
      </div>

<!-- Action Buttons -->
<div class="space-y-4">
  <button
    class="btn-primary w-full py-4 rounded-2xl text-white font-bold text-lg shadow-lg"
  >
    🛒 أضف إلى السلة
  </button>

  <button
    class="w-full py-4 rounded-2xl border-2 border-gray-300 text-gray-700 font-bold text-lg hover:bg-gray-50 transition-colors"
  >
    ❤️ أضف إلى المفضلة
  </button>
</div>