---
// This component renders the footer section for the Classic theme.
// It displays information about the store and copyright details.
// Props:
// - data: An object of type BlockData, containing company name and year for the copyright notice.

import type { BlockData } from "../../../../../lib/api/types";

// Defines the expected props for the component.

// Retrieves the data prop passed to the component.
const data: BlockData = Astro.props.data;

---

<footer class="text-center w-full p-8 bg-slate-500">
  <!-- Title -->
  <h2 class="text-xl font-bold text-indigo-900 mb-4">MAZAYA</h2>

  <!-- Links -->
  <div
    class="flex justify-center flex-wrap gap-6 text-sm font-medium text-black mb-6"
  >
    <a href="#" class="underline">سياسة الشحن</a>
    <a href="#" class="underline">سياسة الخصوصية</a>
    <a href="#" class="underline">شروط الاستخدام</a>
    <a href="#" class="underline">شروط الإستبدال الإسترجاع</a>
  </div>

  <!-- Social Icons -->
  <div class="flex justify-center gap-6 text-2xl text-black">
    <!-- WhatsApp -->
    <a href="#" aria-label="WhatsApp">
      <i class="fab fa-whatsapp"></i>
    </a>
    <!-- Instagram -->
    <a href="#" aria-label="Instagram">
      <i class="fab fa-instagram"></i>
    </a>
    <!-- Messenger -->
    <a href="#" aria-label="Messenger">
      <i class="fab fa-facebook-messenger"></i>
    </a>
    <!-- Facebook -->
    <a href="#" aria-label="Facebook">
      <i class="fab fa-facebook-f"></i>
    </a>
  </div>
</footer>
