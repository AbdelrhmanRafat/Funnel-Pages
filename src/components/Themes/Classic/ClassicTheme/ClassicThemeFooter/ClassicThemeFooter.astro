---
import type { BlockData } from '../../../../../lib/api/types';


interface Props {
  data?: BlockData;
}

const data = (Astro.props as { data: BlockData }).data;

---

<footer class="bg-gray-900 text-white py-14 border-t-4 border-gold">
  <div class="px-6 grid grid-cols-1 md:grid-cols-3 gap-10 text-center md:text-start">

    <!-- Info Column -->
    <div class="space-y-4">
      <h4 class="text-3xl font-bold text-gold font-serif">متجر المنتجات الرقمية</h4>
      <p class="text-gray-300 text-lg font-serif leading-relaxed">
        نقدم أفضل المنتجات الرقمية<br>
        بجودة عالية وبأسعار تنافسية.
      </p>
    </div>

    <!-- Spacer / Middle Column -->
    <div class="hidden md:block"></div>

    <!-- Contact / Rights Column -->
    <div class="space-y-4 text-gray-300 font-serif">
      <div class="space-y-1">
        <p class="text-lg">جميع الحقوق محفوظة</p>
        <p class="text-gold font-semibold">{data.company_name} © {data.year}</p>
      </div>
    </div>

  </div>

</footer>
