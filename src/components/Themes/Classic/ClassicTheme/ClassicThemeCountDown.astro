---
import type { BlockData } from "../../../../Interfaces/Products";

interface Props {
  data?: BlockData;
}

const data = (Astro.props as { data: BlockData }).data;
---

<!-- Countdown Timer -->
<section class="bg-burgundy text-white py-6 border-t border-gold">
  <div class="container mx-auto px-4 text-center">
    <h2 class="text-2xl font-bold mb-4 font-serif text-gold">
      ينتهي العرض خلال:
    </h2>
    <div class="flex justify-center space-x-6 space-x-reverse" id="countdown">
      <div
        class="bg-cream text-burgundy rounded-lg px-6 py-4 min-w-[80px] border-2 border-gold shadow-lg"
      >
        <div class="text-3xl font-bold" id="hours">00</div>
        <div class="text-sm font-serif">ساعة</div>
      </div>
      <div
        class="bg-cream text-burgundy rounded-lg px-6 py-4 min-w-[80px] border-2 border-gold shadow-lg"
      >
        <div class="text-3xl font-bold" id="minutes">00</div>
        <div class="text-sm font-serif">دقيقة</div>
      </div>
      <div
        class="bg-cream text-burgundy rounded-lg px-6 py-4 min-w-[80px] border-2 border-gold shadow-lg"
      >
        <div class="text-3xl font-bold" id="seconds">00</div>
        <div class="text-sm font-serif">ثانية</div>
      </div>
    </div>
  </div>
</section>
