---
import ClassicColorOptionsWithoutBundlesReact from "./ClassicColorOptionsWithoutBundlesReact.tsx";

export interface Props {
  option: {
    value: string;
    hex?: string;
  };
  index: number;
  optionType: "first" | "second";
  showLabel?: boolean; // Kept for interface consistency, though not used in original template
  // These would be passed by the parent component that uses this option
  isSelected?: boolean;
  onClick?: () => void;
}

const {
  option,
  index,
  optionType,
  showLabel, // Prop exists but not used in original visual output
  isSelected = false,
  onClick = () => {}
} = Astro.props;

const reactProps = {
  option,
  index,
  optionType,
  isSelected,
  onClick,
  // showLabel // Not passed to React unless React component uses it
};
---

<ClassicColorOptionsWithoutBundlesReact {...reactProps} client:load />
