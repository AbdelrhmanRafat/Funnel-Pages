---
import type { BlockData, OptionOption } from "../../../../../../lib/api/types";
import { getTranslation } from "../../../../../../lib/utils/i18n/translations";

const data: BlockData[] = Astro.props.data;
const name = "qty";

---

<h3 class="text-xl font-bold text-gray-900 mb-4 flex items-center gap-2" data-translate="quantityOptions.chooseQuantity">
  {getTranslation('quantityOptions.chooseQuantity')}
</h3>

<div class="space-y-3">
  {
    data.map((item, index) => (
      <label
        class="p-3 sm:p-4 group block relative overflow-hidden rounded-xl sm:rounded-2xl border-2 cursor-pointer transition-all duration-300 hover:shadow-lg hover:scale-[1.02] has-[:checked]:border-blue-500 has-[:checked]:bg-blue-50 has-[:checked]:shadow-md border-gray-200 bg-white hover:border-blue-300"
        for={`${name}${index + 1}`}
      >
        <input
          type="radio"
          id={`${name}${index + 1}`}
          name={name}
          class="hidden"
          checked={index === 0}
          selected-item = {JSON.stringify(item)}
          data-items={item.items} 
        />

        {/* Popular Badge for Best Deal */}
        {item.discount_percent !== "0%" && item.items === 2 && (
          <div class="absolute top-0 right-0 bg-gradient-to-r from-orange-400 to-orange-500 text-white text-xs font-bold px-2 py-1 sm:px-3 sm:py-1 rounded-bl-lg rounded-tr-xl sm:rounded-tr-2xl z-10" data-translate="quantityOptions.popular">
            {getTranslation('quantityOptions.popular')}
          </div>
        )}

        {/* Best Value Badge for Highest Discount */}
        {item.discount_percent === "35%" && (
          <div class="absolute top-0 right-0 bg-gradient-to-r from-green-500 to-green-600 text-white text-xs font-bold px-2 py-1 sm:px-3 sm:py-1 rounded-bl-lg rounded-tr-xl sm:rounded-tr-2xl z-10" data-translate="quantityOptions.bestValue">
            {getTranslation('quantityOptions.bestValue')}
          </div>
        )}

        <div class="p-3 sm:p-6">
          <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start mb-3 space-y-2 sm:space-y-0">
            <div class="flex-1">
              <h3 class="font-bold text-base sm:text-lg text-gray-900 mb-1">{item.title}</h3>
              <div class="flex flex-col sm:flex-row sm:items-center gap-1 sm:gap-2 text-xs sm:text-sm text-gray-600">
                <span class="bg-gray-100 px-2 py-1 rounded-full inline-block w-fit">
                  {item.items} {getTranslation(item.items === 1 ? 'quantityOptions.itemUnit.singular' : 'quantityOptions.itemUnit.plural')}
                </span>
                <span class="hidden sm:inline">â€¢</span>
                <span class="text-xs sm:text-sm">{getTranslation('quantityOptions.pricePerItem').replace('{price}', item.price_per_item.toLocaleString() + " " + getTranslation('productFunnel.currency'))}</span>
              </div>
            </div>

            <div class="text-left sm:text-right mt-2 sm:mt-0">
              <div
                class={`text-xl sm:text-2xl font-bold mb-1 ${
                  item.discount > 0 ? "text-green-600" : "text-blue-600"
                }`}
              >
                {item.final_total.toLocaleString()} {getTranslation('productFunnel.currency')}
              </div>
              {item.discount > 0 && (
                <div class="flex flex-col items-start sm:items-end">
                  <div class="text-xs sm:text-sm text-gray-500 line-through">
                    {item.original_total.toLocaleString()} {getTranslation('productFunnel.currency')}
                  </div>
                  <div class="inline-flex items-center bg-green-100 text-green-700 text-xs font-semibold px-2 py-1 rounded-full mt-1">
                    <svg
                      class="w-3 h-3 ml-1"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    <span class="ml-1">
                      {getTranslation('quantityOptions.saveDiscount').replace('{discountAmount}', item.discount.toLocaleString() + " " + getTranslation('productFunnel.currency')).replace('{discountPercent}', item.discount_percent)}
                    </span>
                  </div>
                </div>
              )}
            </div>
          </div>

          {/* Price Breakdown */}
          <div class="border-t border-gray-100 pt-3 mt-3">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-2 sm:gap-4 text-xs sm:text-sm">
              <div class="flex justify-between sm:block">
                <span class="text-gray-600" data-translate="quantityOptions.totalProducts">{getTranslation('quantityOptions.totalProducts')}</span>
                <span class="font-semibold text-gray-900 sm:mr-2">
                  {item.total_price.toLocaleString()} {getTranslation('productFunnel.currency')}
                </span>
              </div>
              <div class="flex justify-between sm:block">
                <span class="text-gray-600" data-translate="quantityOptions.shippingLabel">{getTranslation('quantityOptions.shippingLabel')}</span>
                <span class="font-semibold text-gray-900 sm:mr-2">
                  {item.shipping_price.toLocaleString()} {getTranslation('productFunnel.currency')}
                </span>
              </div>
            </div>
          </div>
        </div>
      </label>
    ))
  }
</div>

<script>
  import "./QuantityOptions"
</script>