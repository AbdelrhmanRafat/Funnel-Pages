---
import type { BlockData, ConfirmationNotices } from "../../../../../lib/api/types";

const data: BlockData = Astro.props.data;
const confirmationNotices : ConfirmationNotices[] = data.confirmationNotices;
---
<section id="classic-order-confirmation-notice" >
<div
class="bg-gray-100 text-gray-700 rounded-2xl px-2 text-start md:text-center py-4"
>
  <p class="mb-2">{data.title}</p>
  <div
    class="flex flex-col justify-start items-start gap-3 md:flex-row md:justify-center md:items-center md:gap-8 text-sm text-gray-800"
  >
    {
      confirmationNotices.map((item, index) => (
        <div class="flex items-center gap-2 md:gap-1">
          <div class="flex justify-center items-center rounded-full w-8 h-8 bg-blue-600 text-white">
            <i class={item.icon} />
          </div>
          <span>{item.title}</span>
        </div>
      ))
    }
  </div>
</div>
</section>
