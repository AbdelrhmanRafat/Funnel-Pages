---
import type { BlockData } from "../../../../Interfaces/Products";

interface Props {
  data?: BlockData;
}
const data = (Astro.props as { data: BlockData }).data;
---

<!-- Form Section -->
<div class="bg-white rounded-3xl shadow-2xl p-10 border-2 border-gold">
  <h3 class="text-4xl font-bold text-burgundy mb-10 text-center font-serif border-b-2 border-gold pb-5">
    اطلب الآن
  </h3>

  <form id="orderForm" class="space-y-6">
    <!-- Full Name -->
    <div class="relative">
      <label for="name" class="block text-lg font-semibold text-gray-800 mb-2 font-serif">
        الاسم الكامل <span class="text-red-500">*</span>
      </label>
      <input
        type="text"
        id="name"
        name="name"
        required
        placeholder={data.full_name}
        class="w-full px-5 py-4 border-2 border-gold rounded-xl bg-cream text-gray-800 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-burgundy focus:border-burgundy transition-all"
      />
    </div>

    <!-- Phone -->
    <div class="relative">
      <label for="phone" class="block text-lg font-semibold text-gray-800 mb-2 font-serif">
        رقم الهاتف <span class="text-red-500">*</span>
      </label>
      <input
        type="tel"
        id="phone"
        name="phone"
        required
        placeholder={data.phone}
        class="w-full px-5 py-4 border-2 border-gold rounded-xl bg-cream text-gray-800 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-burgundy focus:border-burgundy transition-all"
      />
    </div>

    <!-- Address -->
    <div class="relative">
      <label for="address" class="block text-lg font-semibold text-gray-800 mb-2 font-serif">
        العنوان <span class="text-red-500">*</span>
      </label>
      <textarea
        id="address"
        name="address"
        rows="4"
        required
        placeholder={data.address}
        class="w-full px-5 py-4 border-2 border-gold rounded-xl bg-cream text-gray-800 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-burgundy focus:border-burgundy transition-all resize-none"
      ></textarea>
    </div>
  </form>

  <!-- Summary -->
  <div class="bg-cream p-6 mt-10 rounded-xl border-2 border-gold shadow-inner space-y-4">
    <div class="flex justify-between items-center">
      <span class="font-serif text-lg text-gray-700">اللون المختار:</span>
      <span id="selectedColor" class="font-bold text-burgundy">لم يتم الاختيار</span>
    </div>
    <div class="flex justify-between items-center">
      <span class="font-serif text-lg text-gray-700">المقاس المختار:</span>
      <span id="selectedSize" class="font-bold text-burgundy">لم يتم الاختيار</span>
    </div>
    <div class="flex justify-between items-center">
      <span class="font-serif text-lg text-gray-700">الكمية:</span>
      <span id="selectedQuantity" class="font-bold text-burgundy">1</span>
    </div>
  </div>
  <!-- Submit Button -->
  <button
    type="submit"
    class="w-full mt-10 bg-burgundy hover:bg-red-900 text-white py-5 rounded-xl font-bold text-xl border-2 border-gold hover:border-white transition duration-300 font-serif shadow-lg hover:shadow-2xl active:scale-95"
  >
    اطلب الآن
  </button>
</div>
