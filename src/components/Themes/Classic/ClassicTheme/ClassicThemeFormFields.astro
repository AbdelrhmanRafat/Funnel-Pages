---
import type { BlockData } from "../../../../Interfaces/Products";

interface Props {
  data?: BlockData;
}

const { data } = Astro.props;
---

<!-- Form Section -->
<div class="bg-white rounded-lg shadow-2xl p-8 border-2 border-gold">
  <h3
    class="text-3xl font-bold text-burgundy mb-8 text-center font-serif border-b-2 border-gold pb-4"
  >
    اطلب الآن
  </h3>

  <form id="orderForm" class="space-y-4">
    <div>
      <label
        for="name"
        class="block text-lg font-medium text-gray-700 mb-2 font-serif"
        >الاسم الكامل *</label
      >
      <input
        type="text"
        id="name"
        name="name"
        required
        class="w-full px-6 py-4 border-2 border-gold rounded-lg focus:ring-2 focus:ring-burgundy focus:border-burgundy bg-cream"
      />
    </div>

    <div>
      <label
        for="phone"
        class="block text-lg font-medium text-gray-700 mb-2 font-serif"
        >رقم الهاتف *</label
      >
      <input
        type="tel"
        id="phone"
        name="phone"
        required
        class="w-full px-6 py-4 border-2 border-gold rounded-lg focus:ring-2 focus:ring-burgundy focus:border-burgundy bg-cream"
      />
    </div>

    <div>
      <label
        for="address"
        class="block text-lg font-medium text-gray-700 mb-2 font-serif"
        >العنوان *</label
      >
      <textarea
        id="address"
        name="address"
        rows="4"
        required
        class="w-full px-6 py-4 border-2 border-gold rounded-lg focus:ring-2 focus:ring-burgundy focus:border-burgundy bg-cream"
      ></textarea>
    </div>
  </form>

  <div class="bg-cream p-6 rounded-lg border-2 border-gold">
    <div class="flex justify-between items-center mb-3">
      <span class="font-serif text-lg">اللون المختار:</span>
      <span id="selectedColor" class="font-bold text-burgundy"
        >لم يتم الاختيار</span
      >
    </div>
    <div class="flex justify-between items-center mb-3">
      <span class="font-serif text-lg">المقاس المختار:</span>
      <span id="selectedSize" class="font-bold text-burgundy"
        >لم يتم الاختيار</span
      >
    </div>
    <div class="flex justify-between items-center">
      <span class="font-serif text-lg">الكمية:</span>
      <span id="selectedQuantity" class="font-bold text-burgundy">1</span>
    </div>
  </div>

  <button
    type="submit"
    class="w-full bg-burgundy hover:bg-red-900 text-white py-5 rounded-lg font-bold text-xl border-2 border-gold hover:border-white transition duration-300 font-serif shadow-lg"
  >
    اطلب الآن - 299 ريال
  </button>
</div>
