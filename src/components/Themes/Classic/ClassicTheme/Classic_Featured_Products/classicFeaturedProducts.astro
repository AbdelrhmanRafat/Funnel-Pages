---
// ProductImageSection.astro
import "./classicFeaturedProducts.css";
import type { BlockData, Image } from "../../../../../lib/api/types";

const data: BlockData = Astro.props.data;
---

<section id="classic-product-image" class="classic-section">
  <!-- Header -->
  <div class="classic-section-header">
    <i class="fa-solid fa-images"></i>
    <h5>{data.title}</h5>
  </div>

  <!-- Product Grid -->
  <div class="grid grid-cols-1 gap-x-2 gap-y-4 md:grid-cols-3">
    <!-- Featured Product - Full Width -->
    <div class="classic-product-card classic-product-featured md:col-span-3">
      <div class="classic-product-image-wrapper-large">
        <img 
          src={data.image?.src}
          alt={data.image?.alt}
          class="classic-product-image-large"
        />
        <div class="classic-product-overlay-large flex justify-center items-start text-center">
          <div class="classic-featured-content">
            <h2 class="classic-featured-title">{data.subtitle}</h2>
            <p class="classic-featured-subtitle">{data.description}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
