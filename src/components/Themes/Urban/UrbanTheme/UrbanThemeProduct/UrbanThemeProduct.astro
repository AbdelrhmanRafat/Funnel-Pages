---
import "./UrbanThemeProduct.css";
import type {
  BlockData,
  Product,
} from "../../../../../lib/api/types";
import { getTranslation } from "../../../../../lib/utils/i18n/translations";
import type { Language } from "../../../../../lib/utils/i18n/translations";
import { UrbanProductInfoComponents } from "../../../../../lib/constants/themes";
import UrbanThemeRates from "../UrbanThemeRates/UrbanThemeRates.astro";
import UrbanSelectionOptionsWithoutBundles from "../UI/UrbanSelectionOptionsVariantWithoutBundles/urbanSelectionOptionsWithoutBundles.astro";
import UrbanProductCosts from "../UI/UrbanProductCosts/urbanProductCosts.astro";
import UrbanProductGalleryComponent from "../UI/UrbanProductGallery/UrbanProductGalleryComponent.astro";
import UrbanOrderThroughWhatsapp from "../UrbanOrderThroughWhatsapp/urbanOrderThroughWhatsapp.astro";
import UrbanFakeVisitors from "../UrbanFakeVisitors/UrbanFakeVisitors.astro";
import UrbanCoupon from "../UrbanCoupon/UrbanCoupon.astro";
import UrbanProductBundles from "../UrbanProductBundles/UrbanProductBundles.astro";
import UrbanThemeFormFields from "../Urban_FormFields/UrbanThemeFormFields.astro";
import UrbanOrderConfirmationNotice from "../Urban_OrderConfirmationNotice/UrbanOrderConfirmationNotice.astro";

// Define render order for product info section - reorder as needed!
const PRODUCT_INFO_RENDER_ORDER = [
  UrbanProductInfoComponents.Visitores,
  UrbanProductInfoComponents.ProductHeader,
  UrbanProductInfoComponents.ProductDescription,
  UrbanProductInfoComponents.PurchaseOptions,
  UrbanProductInfoComponents.coupon,
  UrbanProductInfoComponents.FormFields,
  UrbanProductInfoComponents.OrderConfirmation,
  UrbanProductInfoComponents.OrderThroghWhatsapp
];

// Retrieves product and purchaseOptions from Astro's props.
const product: Product = Astro.props.product;
const purchaseOptions: BlockData = Astro.props.purchaseOptions;
const formFieldsData: BlockData = Astro.props.formFieldsData;
const ratingData : BlockData = Astro.props.ratingData;
const orderThroughWhatsappData : BlockData = Astro.props.orderThroughWhatsappData;
const fakeVisitorsData : BlockData = Astro.props.fakeVisitorsData;
const cuponData : BlockData = Astro.props.cuponData;
const orderConfirmationNoticeData: BlockData =
  Astro.props.orderConfirmationNoticeData;

// Extracts color and size options from the product data
const isHaveVariant = product.is_have_variant;
// Get initial language from cookie during SSR
const currentLang: Language = (Astro.cookies.get("lang")?.value ||
  "en") as Language;
const isArabic = currentLang === "ar";

// Helper function to check if component data is available
interface ComponentCheckResult {
  isComponentFound: boolean;
  componentData: any;
}

function isComponentDataAvailable(
  componentType: UrbanProductInfoComponents,
): ComponentCheckResult {
  switch (componentType) {
    case UrbanProductInfoComponents.ProductHeader:
      return {
        isComponentFound: !!product,
        componentData: product,
      };
    case UrbanProductInfoComponents.ProductDescription:
      return {
        isComponentFound:
          !!product && (!!product.description_ar || !!product.description_en),
        componentData: product,
      };
    case UrbanProductInfoComponents.PurchaseOptions:
      return {
        isComponentFound: !!purchaseOptions,
        componentData: purchaseOptions,
      };
    case UrbanProductInfoComponents.FormFields:
      return {
        isComponentFound: !!formFieldsData,
        componentData: formFieldsData,
      };
    case UrbanProductInfoComponents.OrderConfirmation:
      return {
        isComponentFound: !!orderConfirmationNoticeData,
        componentData: orderConfirmationNoticeData,
      };
    case UrbanProductInfoComponents.OrderThroghWhatsapp:
      return {
        isComponentFound: !!orderThroughWhatsappData,
        componentData: orderThroughWhatsappData,
      };
    case UrbanProductInfoComponents.coupon:
      return {
        isComponentFound: !!cuponData,
        componentData: cuponData,
      };
    case UrbanProductInfoComponents.Visitores:
      return {
        isComponentFound: !!fakeVisitorsData,
        componentData: fakeVisitorsData,
      };
    default:
      return {
        isComponentFound: false,
        componentData: null,
      };
  }
}
---

<section id="urban-product-details" class="urban-product-details-section">
  <div class="flex flex-col lg:flex-row gap-5">
    <!-- Gallery Section -->
    {<UrbanProductGalleryComponent product={product} />}

    <!-- Product Info Section with Array-Based Rendering -->
       <div class="lg:w-1/2 urban-product-details-container flex flex-col gap-3 justify-center items-center md:px-8 md:py-3 rounded-xl">
      {
        PRODUCT_INFO_RENDER_ORDER.map((componentType) => {
          const componentCheck = isComponentDataAvailable(componentType);

          if (!componentCheck.isComponentFound) {
            return null;
          }

          // Product Header Component with Observer Web Component
          if (componentType === UrbanProductInfoComponents.ProductHeader) {
            return (
              <urban-product-header class="w-full"
                data-purchase-options={(!purchaseOptions).toString()}
                data-is-have-variant={isHaveVariant.toString()}
                data-initial-price={product.price.toString()}
                data-initial-price-discount={product.price_after_discount.toString()}
                data-initial-sku={product.sku_code}
                data-current-lang={currentLang}
              >
                <div class="flex flex-col justify-start items-start gap-2">
                  <div class="flex items-center gap-2">
                    <span
                      class={
                        product.is_active
                          ? "urban-product-details-badge-success text-xs py-1 px-3 rounded-full font-medium"
                          : "urban-product-details-badge-error text-xs py-1 px-3 rounded-full font-medium"
                      }
                      data-translate={
                        product.is_active
                          ? "product.available"
                          : "product.notAvailable"
                      }
                    >
                      {product.is_active
                        ? getTranslation("product.available", currentLang)
                        : getTranslation("product.notAvailable", currentLang)}
                    </span>
                    { (!purchaseOptions || isHaveVariant === "false") &&
                    <div class="urban-product-details-sku text-sm">
                      <span data-translate="product.productCode">
                        {getTranslation("product.productCode", currentLang)}
                      </span>
                      <span>: <span data-product-sku>{product.sku_code}</span></span>
                    </div>
                    }
                  </div>
                  <div class="w-full flex justify-start items-center gap-4">
                    <h2 class="urban-product-details-title text-3xl lg:text-4xl font-bold leading-tight">
                      {isArabic ? product.name_ar : product.name_en}
                    </h2>
                    {ratingData && <UrbanThemeRates ratingData={ratingData} />}
                  </div>
                  <div class="flex justify-start items-center gap-4">
                    <div class="urban-product-details-price urban-product-details-price--discount flex justify-center line-through items-center gap-2 text-4xl font-bold">
                      <span data-product-price>{product.price}</span>
                    </div>
                    <div class="urban-product-details-price flex justify-center items-center gap-2 text-4xl font-bold">
                      <span data-product-price-discount>{product.price_after_discount}</span>
                      <span data-translate="productFunnel.currency" />
                    </div>
                  </div>
                </div>
              </urban-product-header>
            );
          }
          
          // Product Description Component
          if (componentType === UrbanProductInfoComponents.ProductDescription) {
            return (
              <>
                <div class="w-full">
                  <h3 class="urban-product-details-description-header text-2xl font-bold pb-3" data-translate="product.description">
                    {getTranslation("product.description", currentLang)}
                  </h3>
                  <p
                    class="urban-product-details-text-body leading-relaxed"
                    set:html={isArabic ? product.description_ar : product.description_en}
                  />
                </div>
                {!purchaseOptions && (
                  <>
                    <div class="w-full py-3">
                      <UrbanSelectionOptionsWithoutBundles product={product} />
                    </div>
                    <div class="w-full">
                      <UrbanProductCosts hasBundles="false" />
                    </div>
                  </>
                )}
              </>
            );
          }

          // Purchase Options Component
          if (componentType === UrbanProductInfoComponents.PurchaseOptions) {
            return (
              <UrbanProductBundles
                product={product}
                data={componentCheck.componentData}
              />
            );
          }

          // Coupon Component
          if (componentType === UrbanProductInfoComponents.coupon) {
            return (
              <UrbanCoupon
                data={componentCheck.componentData}
              />
            );
          }

          // Form Fields Component
          if (componentType === UrbanProductInfoComponents.FormFields) {
            return (
              <UrbanThemeFormFields
                product={product}
                data={componentCheck.componentData}
                purchaseOptions={purchaseOptions}
                isHaveVariant={isHaveVariant}
              />
            );
          }

          // Order Confirmation Component
          if (componentType === UrbanProductInfoComponents.OrderConfirmation) {
            return (
              <UrbanOrderConfirmationNotice
                data={componentCheck.componentData}
              />
            );
          }

          // Visitors Component
          if (componentType === UrbanProductInfoComponents.Visitores) {
            return (
              <UrbanFakeVisitors
                data={componentCheck.componentData}
              />
            );
          }

          // Order Through WhatsApp Component
          if (componentType === UrbanProductInfoComponents.OrderThroghWhatsapp) {
            return (
              <UrbanOrderThroughWhatsapp
                data={componentCheck.componentData}
              />
            );
          }

          return null;
        })
      }
    </div>
  </div>
</section>

<script>
  import "./UrbanThemeProduct";
</script>