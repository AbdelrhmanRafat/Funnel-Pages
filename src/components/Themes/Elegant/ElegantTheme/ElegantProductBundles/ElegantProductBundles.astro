---
import type { BlockData, Product } from "../../../../../lib/api/types";

const data: BlockData[] = Astro.props.data;
const product : Product = Astro.props.product;

import { FunnelElegantComponents } from "../../../../../lib/constants/themes";
import ElegantProductCosts from "../UI/ElegantProductCosts/elegantProductCosts.astro";
import ElegantBundleOptions from "../UI/ElegantBundleOptions/ElegantBundleOptions.astro";

---

<div id={FunnelElegantComponents.ElegantProductFunnel} class="w-full flex flex-col gap-2">
  <ElegantBundleOptions data={data} product={product} />
  <ElegantProductCosts hasBundles="true" />
</div>