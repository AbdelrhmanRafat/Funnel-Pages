---
import "./ElegantThemeProduct.css";
import type {
  BlockData,
  Product,
} from "../../../../../lib/api/types";
import { getTranslation } from "../../../../../lib/utils/i18n/translations";
import type { Language } from "../../../../../lib/utils/i18n/translations";
import { ElegantProductInfoComponents } from "../../../../../lib/constants/themes";
import ElegantThemeRates from "../ElegantThemeRates/ElegantThemeRates.astro";
import ElegantSelectionOptionsWithoutBundles from "../UI/ElegantSelectionOptionsVariantWithoutBundles/elegantSelectionOptionsWithoutBundles.astro";
import ElegantProductCosts from "../UI/ElegantProductCosts/elegantProductCosts.astro";
import ElegantProductGalleryComponent from "../UI/ElegantProductGallery/ElegantProductGalleryComponent.astro";
import ElegantOrderThroughWhatsapp from "../ElegantOrderThroughWhatsapp/elegantOrderThroughWhatsapp.astro";
import ElegantFakeVisitors from "../ElegantFakeVisitors/ElegantFakeVisitors.astro";
import ElegantCoupon from "../ElegantCoupon/ElegantCoupon.astro";
import ElegantProductBundles from "../ElegantProductBundles/ElegantProductBundles.astro";
import ElegantThemeFormFields from "../Elegant_FormFields/ElegantThemeFormFields.astro";
import ElegantOrderConfirmationNotice from "../Elegant_OrderConfirmationNotice/ElegantOrderConfirmationNotice.astro";

// Define render order for product info section - reorder as needed!
const PRODUCT_INFO_RENDER_ORDER = [
  ElegantProductInfoComponents.Visitores,
  ElegantProductInfoComponents.ProductHeader,
  ElegantProductInfoComponents.ProductDescription,
  ElegantProductInfoComponents.PurchaseOptions,
  ElegantProductInfoComponents.coupon,
  ElegantProductInfoComponents.FormFields,
  ElegantProductInfoComponents.OrderConfirmation,
  ElegantProductInfoComponents.OrderThroghWhatsapp
];

// Retrieves product and purchaseOptions from Astro's props.
const product: Product = Astro.props.product;
const purchaseOptions: BlockData = Astro.props.purchaseOptions;
const formFieldsData: BlockData = Astro.props.formFieldsData;
const ratingData : BlockData = Astro.props.ratingData;
const orderThroughWhatsappData : BlockData = Astro.props.orderThroughWhatsappData;
const fakeVisitorsData : BlockData = Astro.props.fakeVisitorsData;
const cuponData : BlockData = Astro.props.cuponData;
const orderConfirmationNoticeData: BlockData =
  Astro.props.orderConfirmationNoticeData;

// Extracts color and size options from the product data
const isHaveVariant = product.is_have_variant;
// Get initial language from cookie during SSR
const currentLang: Language = (Astro.cookies.get("lang")?.value ||
  "en") as Language;
const isArabic = currentLang === "ar";

// Helper function to check if component data is available
interface ComponentCheckResult {
  isComponentFound: boolean;
  componentData: any;
}

function isComponentDataAvailable(
  componentType: ElegantProductInfoComponents,
): ComponentCheckResult {
  switch (componentType) {
    case ElegantProductInfoComponents.ProductHeader:
      return {
        isComponentFound: !!product,
        componentData: product,
      };
    case ElegantProductInfoComponents.ProductDescription:
      return {
        isComponentFound:
          !!product && (!!product.description_ar || !!product.description_en),
        componentData: product,
      };
    case ElegantProductInfoComponents.PurchaseOptions:
      return {
        isComponentFound: !!purchaseOptions,
        componentData: purchaseOptions,
      };
    case ElegantProductInfoComponents.FormFields:
      return {
        isComponentFound: !!formFieldsData,
        componentData: formFieldsData,
      };
    case ElegantProductInfoComponents.OrderConfirmation:
      return {
        isComponentFound: !!orderConfirmationNoticeData,
        componentData: orderConfirmationNoticeData,
      };
    case ElegantProductInfoComponents.OrderThroghWhatsapp:
      return {
        isComponentFound: !!orderThroughWhatsappData,
        componentData: orderThroughWhatsappData,
      };
    case ElegantProductInfoComponents.coupon:
      return {
        isComponentFound: !!cuponData,
        componentData: cuponData,
      };
    case ElegantProductInfoComponents.Visitores:
      return {
        isComponentFound: !!fakeVisitorsData,
        componentData: fakeVisitorsData,
      };
    default:
      return {
        isComponentFound: false,
        componentData: null,
      };
  }
}
---

<section id="elegant-product-details" class="elegant-product-details-section">
  <div class="flex flex-col lg:flex-row gap-5">
    <!-- Gallery Section -->
    {<ElegantProductGalleryComponent product={product} />}

    <!-- Product Info Section with Array-Based Rendering -->
       <div class="lg:w-1/2 elegant-product-details-container flex flex-col gap-3 justify-center items-center md:px-8 md:py-3 rounded-xl">
      {
        PRODUCT_INFO_RENDER_ORDER.map((componentType) => {
          const componentCheck = isComponentDataAvailable(componentType);

          if (!componentCheck.isComponentFound) {
            return null;
          }

          // Product Header Component with Observer Web Component
          if (componentType === ElegantProductInfoComponents.ProductHeader) {
            return (
              <elegant-product-header class="w-full"
                data-purchase-options={(!purchaseOptions).toString()}
                data-is-have-variant={isHaveVariant.toString()}
                data-initial-price={product.price.toString()}
                data-initial-price-discount={product.price_after_discount.toString()}
                data-initial-sku={product.sku_code}
                data-current-lang={currentLang}
              >
                <div class="flex flex-col justify-start items-start gap-2">
                  <div class="flex items-center gap-2">
                    <span
                      class={
                        product.is_active
                          ? "elegant-product-details-badge-success text-xs py-1 px-3 rounded-full font-medium"
                          : "elegant-product-details-badge-error text-xs py-1 px-3 rounded-full font-medium"
                      }
                      data-translate={
                        product.is_active
                          ? "product.available"
                          : "product.notAvailable"
                      }
                    >
                      {product.is_active
                        ? getTranslation("product.available", currentLang)
                        : getTranslation("product.notAvailable", currentLang)}
                    </span>
                    { (!purchaseOptions || isHaveVariant === "false") &&
                    <div class="elegant-product-details-sku text-sm">
                      <span data-translate="product.productCode">
                        {getTranslation("product.productCode", currentLang)}
                      </span>
                      <span>: <span data-product-sku>{product.sku_code}</span></span>
                    </div>
                    }
                  </div>
                  <div class="w-full flex justify-start items-center gap-4">
                    <h2 class="elegant-product-details-title text-3xl lg:text-4xl font-bold leading-tight">
                      {isArabic ? product.name_ar : product.name_en}
                    </h2>
                    {ratingData && <ElegantThemeRates ratingData={ratingData} />}
                  </div>
                  <div class="flex justify-start items-center gap-4">
                    <div class="elegant-product-details-price elegant-product-details-price--discount flex justify-center line-through items-center gap-2 text-4xl font-bold">
                      <span data-product-price>{product.price}</span>
                    </div>
                    <div class="elegant-product-details-price flex justify-center items-center gap-2 text-4xl font-bold">
                      <span data-product-price-discount>{product.price_after_discount}</span>
                      <span data-translate="productFunnel.currency" />
                    </div>
                  </div>
                </div>
              </elegant-product-header>
            );
          }
          
          // Product Description Component
          if (componentType === ElegantProductInfoComponents.ProductDescription) {
            return (
              <>
                <div class="w-full">
                  <h3 class="elegant-product-details-description-header text-2xl font-bold pb-3" data-translate="product.description">
                    {getTranslation("product.description", currentLang)}
                  </h3>
                  <p
                    class="elegant-product-details-text-body leading-relaxed"
                    set:html={isArabic ? product.description_ar : product.description_en}
                  />
                </div>
                {!purchaseOptions && (
                  <>
                    <div class="w-full py-3">
                      <ElegantSelectionOptionsWithoutBundles product={product} />
                    </div>
                    <div class="w-full">
                      <ElegantProductCosts hasBundles="false" />
                    </div>
                  </>
                )}
              </>
            );
          }

          // Purchase Options Component
          if (componentType === ElegantProductInfoComponents.PurchaseOptions) {
            return (
              <ElegantProductBundles
                product={product}
                data={componentCheck.componentData}
              />
            );
          }

          // Coupon Component
          if (componentType === ElegantProductInfoComponents.coupon) {
            return (
              <ElegantCoupon
                data={componentCheck.componentData}
              />
            );
          }

          // Form Fields Component
          if (componentType === ElegantProductInfoComponents.FormFields) {
            return (
              <ElegantThemeFormFields
                product={product}
                data={componentCheck.componentData}
                purchaseOptions={purchaseOptions}
                isHaveVariant={isHaveVariant}
              />
            );
          }

          // Order Confirmation Component
          if (componentType === ElegantProductInfoComponents.OrderConfirmation) {
            return (
              <ElegantOrderConfirmationNotice
                data={componentCheck.componentData}
              />
            );
          }

          // Visitors Component
          if (componentType === ElegantProductInfoComponents.Visitores) {
            return (
              <ElegantFakeVisitors
                data={componentCheck.componentData}
              />
            );
          }

          // Order Through WhatsApp Component
          if (componentType === ElegantProductInfoComponents.OrderThroghWhatsapp) {
            return (
              <ElegantOrderThroughWhatsapp
                data={componentCheck.componentData}
              />
            );
          }

          return null;
        })
      }
    </div>
  </div>
</section>

<script>
  import "./ElegantThemeProduct";
</script>