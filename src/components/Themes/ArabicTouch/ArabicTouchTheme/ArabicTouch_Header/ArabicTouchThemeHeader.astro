---
import "./ArabicTouchThemeHeader.css";
import type { BlockData, Data } from "../../../../../lib/api/types";
import ArabicTouchLanguageSwitcher from "../UI/ArabicTouchLanguageSwitcher/ArabicTouchLanguageSwitcher.astro";
import ArabicTouchNavigationMenuDesktop from "../ArabicTouchNavigationMenuDesktop/ArabicTouchNavigationMenuDesktop.astro";
import ArabicTouchNavigationMenuMobile from "../ArabicTouchNavigationMenuMobile/ArabicTouchNavigationMenuMobile.astro";
import type { Language } from "../../../../../lib/utils/i18n/translations";

const data: BlockData = Astro.props.data;
const funnelPage: Data = Astro.props.funnelPage;
// Get initial language from cookie during SSR
const currentLang: Language = (Astro.cookies.get("lang")?.value || "ar") as Language;
const isArabic = currentLang === "ar";

const logo = data?.items?.[0]?.image;
const title = (isArabic ? data?.title_ar : data?.title_en) || "";
const subtitle = data?.items?.[0]?.content || "";
---
<header>
  <div id="arabictouch-header" class="arabictouch-header fixed top-0 left-0 right-0 z-50 transition-transform duration-300 ease-in-out">
    <div class="w-11/12 md:container mx-auto py-2">
      <!-- Top row with Language Switcher and Menu Button -->
      <div class="flex justify-between items-center mb-2">
        <ArabicTouchLanguageSwitcher />
        
        <button
          id="header-menu-button"
          class="arabictouch-menu-button p-2 rounded-lg transition-all duration-300 md:hidden flex items-center justify-center w-10 h-10"
          aria-label="Open navigation menu"
          type="button"
        >
          <div class="w-5 h-3.5 flex flex-col justify-between">
            <span class="arabictouch-hamburger-line w-full h-0.5 rounded-sm transition-all duration-300"></span>
            <span class="arabictouch-hamburger-line w-full h-0.5 rounded-sm transition-all duration-300"></span>
            <span class="arabictouch-hamburger-line w-full h-0.5 rounded-sm transition-all duration-300"></span>
          </div>
        </button>
      </div>

      <div class="flex flex-col items-center">
        <div class="flex flex-col items-center text-center">
          <img
            id="headerLogo"
            src={logo}
            alt={title || "Logo"}
            class="arabictouch-header-logo w-25 mb-2 object-contain"
          />
          
          <h1 class="arabictouch-header-title text-4xl font-bold leading-tight">
            {title}
          </h1>
          
          <p class="arabictouch-header-subtitle text-sm max-w-80 mt-1" title={subtitle}>
            {subtitle}
          </p>
        </div>
        
        <!-- Enhanced Desktop Navigation -->
        <ArabicTouchNavigationMenuDesktop funnelPage={funnelPage}  />
      </div>
    </div>
  </div>
  <!-- Mobile Navigation Menu Overlay -->
  <ArabicTouchNavigationMenuMobile funnelPage={funnelPage} logo={logo} title={title} />
  
  <div class="pt-36 md:pt-60"></div>

</header>

<script>
  import "./ArabicTouchThemeHeader";
</script>