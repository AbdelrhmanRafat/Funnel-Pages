---
import "./ArabicTouchThemeFormFields.css";
import {
  type Language,
} from "../../../../../lib/utils/i18n/translations";
import type { BlockData, PaymentOption, DeliveryOption, Product } from "../../../../../lib/api/types";
import ArabicTouchSubmitOrderButton from "../UI/ArabicTouchSubmitOrderButton/ArabicTouchSubmitOrderButton.astro";
import { FunnelArabicTouchComponents } from "../../../../../lib/constants/themes";

// DATA INITIALIZATION & PROCESSING
const data: BlockData = Astro.props.data;
const purchaseOptions: BlockData = Astro.props.purchaseOptions;
const isHaveVariant: string = Astro.props.isHaveVariant;
const product: Product = Astro.props.product;

// Get initial language from cookie during SSR
const currentLang: Language = (Astro.cookies.get("lang")?.value ||
  "en") as Language;
const isArabic = currentLang === "ar";

const formInputs = data.FormInputs;
// Initialize arrays for cities and payment options
let cities: string[] = [];
let paymentOptions: PaymentOption[] = [];
let deliveryOptions: DeliveryOption[] = [];

if (formInputs?.cities !== null) cities = formInputs?.cities ?? [];
if (formInputs?.PaymentOptions !== null) paymentOptions = formInputs?.PaymentOptions ?? [];
if (formInputs?.DeliveryOptions !== null) deliveryOptions = formInputs?.DeliveryOptions ?? [];
---

<!-- MAIN FORM SECTION -->
<section 
  id={FunnelArabicTouchComponents.ArabicTouchFormFields} 
  class="arabictouch-form w-full p-3"
  aria-labelledby="form-heading"
>
  <div class="mx-auto py-2 flex flex-col justify-center items-center gap-2">
    
    <!-- FORM HEADER -->
    <div class="text-center">
      <h5 
        id="form-heading" 
        class="arabictouch-form-title text-2xl font-semibold" 
      >
      {data.title}
      </h5>
    </div>

    <!-- MAIN FORM -->
    <form 
      id="form-personal-payment-data" 
      form-personal-payment-data 
      class="w-full"
      novalidate
    >
      <div class="mb-8">
        <!-- PERSONAL INFORMATION SECTION -->
        <h2
          class="arabictouch-form-section-title mb-6 text-xl font-semibold"
          data-translate="form.personalInfo"
        >
        </h2>
        
        <div class="space-y-4">
          <!-- FULL NAME INPUT FIELD -->
          <div class="arabictouch-form-group">
             <input
              type="text"
              id="form-fullName"
              class=`arabictouch-form-input  ${isArabic ? "text-right" : "text-left"}  text-sm`
              aria-describedby="form-fullName-error"
              required
            />
            <label
              for="form-fullName"
              class="arabictouch-form-label"
              data-translate="form.fullName"
            >
            </label>
            <span
              id="form-fullName-error"
              class="arabictouch-form-error text-xs"
              role="alert"
              style="display: none;"
            ></span>
          </div>
          
          <!-- PHONE NUMBER INPUT FIELD -->
          <div class="arabictouch-form-group">
          <input
              type="tel"
              id="form-phone"
              class=`arabictouch-form-input ${isArabic ? "text-right" : "text-left"}  text-sm`
              aria-describedby="form-phone-error"
              required
            />
            <label
              for="form-phone"
              class="arabictouch-form-label"
              data-translate="form.phoneNumber"
            >
            </label>
            
            <span
              id="form-phone-error"
              class="arabictouch-form-error text-xs"
              role="alert"
              style="display: none;"
            ></span>
          </div>
          
          <!-- EMAIL INPUT FIELD -->
          <div class="arabictouch-form-group">
             <input
              type="email"
              id="form-email"
              class=`arabictouch-form-input ${isArabic ? "text-right" : "text-left"} text-sm`
              aria-describedby="form-email-error"
              required
            />
            <label
              for="form-email"
              class="arabictouch-form-label block mb-2 text-sm font-medium"
              data-translate="form.email"
            >
            </label>
            <span
              id="form-email-error"
              class="arabictouch-form-error text-xs"
              role="alert"
              style="display: none;"
            ></span>
          </div>
          
          <!-- ADDRESS TEXTAREA FIELD -->
          <div class="arabictouch-form-group">
              <textarea
              id="form-address"
              class=`arabictouch-form-input ${isArabic ? "text-right" : "text-left"} min-h-[80px] resize-y text-sm`
              aria-describedby="form-address-error"
              required
            ></textarea>
            <label
              for="form-address"
              class="arabictouch-form-label block mb-2 text-sm font-medium"
              data-translate="form.address"
            >
            </label>

            <span
              id="form-address-error"
              class="arabictouch-form-error text-xs"
              role="alert"
              style="display: none;"
            ></span>
          </div>
          
          <!-- CITY SELECTION DROPDOWN -->
          <div>
            <label
              for="form-city"
              class="arabictouch-form-label block mb-2 text-sm font-medium"
              data-translate="form.city"
            >
            </label>
            <select 
              id="form-city" 
              class=`arabictouch-form-input ${isArabic ? "text-right" : "text-left"}  text-sm`
              aria-describedby="form-city-error"
              required
            >
              <option value="" data-translate="form.selectCity">
              </option>
              {
                cities.map((city: string) => (
                  <option value={city.toLowerCase().replace(/\s+/g, "")}>
                    {city}
                  </option>
                ))
              }
            </select>
            <span
              id="form-city-error"
              class="arabictouch-form-error text-xs"
              role="alert"
              style="display: none;"
            ></span>
          </div>
          
          <!-- PAYMENT OPTIONS SECTION -->
          {paymentOptions.length > 0 && (
          <div>
            <label
              class="arabictouch-form-label block mb-2 text-sm font-medium"
              data-translate="form.paymentOptions"
            >
            </label>
            <div
              class="space-y-3"
              role="radiogroup"
              aria-label="Payment Method"
              aria-describedby="form-payment-error"
            >
              {
                paymentOptions.map((option, index) => {
                  const value = isArabic ? option.label.ar : option.label.en;
                  const id = `payment-${option.id}`;
                  const isChecked = index === 0;
                  return (
                    <label class="arabictouch-form-payment-option flex items-start gap-2" for={id}>
                      <input
                        type="radio"
                        id={id}
                        name="payment-option"
                        value={value}
                        class="arabictouch-form-radio w-4 h-4"
                        checked={isChecked}
                      />
                      <div class="arabictouch-form-payment-option-content flex-1 ml-3">
                        <div class="flex justify-between items-center">
                          <div class="flex-1 flex flex-col justify-start items-start gap-2">
                            <span class="arabictouch-form-payment-option-label font-medium">
                              {option.label[currentLang]}
                            </span>
                            <span class="arabictouch-form-payment-option-description text-sm">
                              {option.description[currentLang]}
                            </span>

                            {/* Payment method images */}
                            {option.images && option.images.length > 0 && (
                              <div class="flex justify-start items-center flex-wrap gap-4">
                                {option.images.map((imageSrc) => (
                                  <div class="w-8 h-8 flex justify-center items-center">
                                    <img
                                      src={imageSrc}
                                      alt={option.label[currentLang]}
                                      class="w-full"
                                    />
                                  </div>
                                ))}
                              </div>
                            )}
                          </div>
                        </div>
                      </div>
                    </label>
                  );
                })
              }
            </div>
            <span
              id="form-payment-error"
              class="arabictouch-form-error text-xs"
              role="alert"
              style="display: none;"
            ></span>
          </div>
          )}
          
          <!-- DELIVERY OPTIONS SECTION -->
          {deliveryOptions.length > 0 && (
          <div>
            <label
              class="arabictouch-form-label block mb-2 text-sm font-medium"
              data-translate="form.deliveryOptions"
            >
            </label>
            <div
              class="space-y-3"
              role="radiogroup"
              aria-label="Delivery Method"
              aria-describedby="form-delivery-error"
            >
              {
                deliveryOptions.map((option, index) => {
                  const value = isArabic ? option.label.ar : option.label.en;
                  const id = `delivery-${option.id}`;
                  const isChecked = index === 0;
                  return (
                    <label class="arabictouch-form-payment-option flex items-start gap-2" for={id}>
                      <input
                        type="radio"
                        id={id}
                        name="delivery-option"
                        value={value}
                        class="arabictouch-form-radio w-4 h-4"
                        checked={isChecked}
                      />
                      <div class="arabictouch-form-payment-option-content flex-1 ml-3">
                        <div class="flex justify-between items-center">
                          <div class="flex-1 flex flex-col justify-start items-start gap-2">
                            <span class="arabictouch-form-payment-option-label font-medium">
                              {option.label[currentLang]}
                            </span>
                            <span class="arabictouch-form-payment-option-description text-sm">
                              {option.description[currentLang]}
                            </span>
                          </div>
                        </div>
                      </div>
                    </label>
                  );
                })
              }
            </div>
            <span
              id="form-delivery-error"
              class="arabictouch-form-error text-xs"
              role="alert"
              style="display: none;"
            ></span>
          </div>
          )}
          
          <!-- NOTES TEXTAREA FIELD -->
          <div class="arabictouch-form-group">
              <textarea
              id="form-notes"
              placeholder=""
              class=`arabictouch-form-input ${isArabic ? "text-right" : "text-left"} min-h-[100px] resize-y text-sm`
              aria-describedby="form-notes-error"
            ></textarea>
            <label
              for="form-notes"
              class="arabictouch-form-label block mb-2 text-sm font-medium"
              data-translate="form.notes"
            >
            </label>
            <span
              id="form-notes-error"
              class="arabictouch-form-error text-xs"
              role="alert"
              style="display: none;"
            ></span>
          </div>
        </div>
      </div>
      
      <!-- SUBMIT BUTTON SECTION -->
      <ArabicTouchSubmitOrderButton 
        purchaseOptions={purchaseOptions} 
        isHaveVariant={isHaveVariant} 
        product={product} 
      />
    </form>
  </div>
</section>

<!-- CLIENT-SIDE SCRIPTS -->
<script>
  import "./ArabicTouchThemeFormFields";
</script>