---
import "./ArabicTouchDeliveryFeatures.css"
import type { BlockData, Features, Item } from "../../../../../lib/api/types";
import type { Language } from "../../../../../lib/utils/i18n/translations";
import { FunnelArabicTouchComponents } from "../../../../../lib/constants/themes";
import LucideIcon from "../../../../Shared/LucideIcon.astro";

// Get initial language from cookie during SSR
const currentLang: Language = (Astro.cookies.get("lang")?.value || "en") as Language;
const isArabic = currentLang === "ar";

const data: BlockData = Astro.props.data;
const deliveryFeatures: Item[] = data.items ?? [];
---

<section id={FunnelArabicTouchComponents.ArabicTouchDeliveryFeatures} class="arabictouch-section">
  <!-- Header -->
  <div class="arabictouch-section-header">
    {data.icon && <LucideIcon name={data.icon as any} width="48" height="48" />}
    <h5>{isArabic ? data.title_ar : data.title_en}</h5>
  </div>
  
  <!-- Delivery Features Grid - Variation 2: Card-Based Layout with Backgrounds -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    {
      deliveryFeatures.map((feature) => (
        <div class="arabictouch-delivery-card rounded-2xl p-6 flex flex-col justify-center items-center gap-4 transition-all duration-300 hover:shadow-lg">
          <!-- Feature Icon -->
          <div class="arabictouch-delivery-icon w-16 h-16 rounded-full flex items-center justify-center">
            {feature.icon ? 
              <LucideIcon name={feature.icon as any} width="32" height="32" class="arabictouch-delivery-icon-symbol" /> :
              <LucideIcon name={data.icon as any} width="32" height="32" class="arabictouch-delivery-icon-symbol" />
            }
          </div>
          
          <!-- Feature Content -->
          <h3 class="arabictouch-delivery-title font-semibold text-lg leading-tight text-center">
            {feature.label}
          </h3>
          <p class="arabictouch-delivery-subtitle text-sm leading-relaxed text-center">
            {feature.content}
          </p>
        </div>
      ))
    }
  </div>
</section>