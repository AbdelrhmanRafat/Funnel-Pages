---
// This component displays the number of orders placed "today" for the Troy theme.
// It features an animated counter that counts up to the provided order number.
// Props:
// - data: An object of type BlockData, expected to contain `count` (the number of orders today).
import "./TroyThemeTodayOrders.css";
import type { BlockData, Image } from "../../../../../lib/api/types";
const data: BlockData = Astro.props.data;
---

<section id="troy-today-orders" class="troy-section">
    <div class="troy-middle-title">
    <h5 data-translate="todayOrders.title"></h5>
    </div>
    <div>
   <div class="flex items-center justify-center">
    <div class="troy-theme-today-order-count py-4 px-6 text-3xl font-bold text-center">
      <h5>{data.count}</h5>
    </div>
  </div>
</section>

