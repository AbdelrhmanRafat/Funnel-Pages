---
// This component displays the number of orders placed "today" for the Classic theme.
// It features an animated counter that counts up to the provided order number.
// Props:
// - data: An object of type BlockData, expected to contain `counters` array.
import "./MinimalThemeTodayStatistics.css";
import type { BlockData, Item } from "../../../../../lib/api/types";
import { FunnelMinimalComponents } from "../../../../../lib/constants/themes";
import type { Language } from "../../../../../lib/utils/i18n/translations";

const data: BlockData = Astro.props.data;
const counters: Item[] = data.items ?? [];

// Get initial language from cookie during SSR
const currentLang: Language = (Astro.cookies.get("lang")?.value ||
  "en") as Language;
const isArabic = currentLang === "ar";
---

<minimal-statistics-counter>
  <section
    id={FunnelMinimalComponents.minimalTodayStatistics}
    class="minimal-section"
  >
    <div
      class="minimal-middle-title flex flex-col justify-center items-center gap-3"
    >
      <h3>
        {isArabic ? data.title_ar : data.title_en}
      </h3>
      <div class="w-24 h-1 minimal-divider mx-auto rounded-full"></div>
    </div>

    <div class="minimal-statistics-minimal-container py-12">
      <div
        class="flex flex-col md:flex-row justify-center items-center gap-8 md:gap-16 lg:gap-20"
      >
        {
          counters.map((counter, index) => (
            <div class="minimal-counter-minimal-item flex-1 max-w-xs text-center relative">
              {/* Large animated number */}
              <div class="minimal-theme-today-order-count p-0 flex justify-center items-center gap-4 text-6xl md:text-7xl lg:text-8xl font-black leading-none">
                <span>+</span>
                <h5 class="minimal-order-counter" data-target={counter.number}>
                  0
                </h5>
              </div>

              {/* Green label text */}
              <div class="minimal-counter-minimal-label text-2xl font-bold mt-4 leading-relaxed">
                {counter.label}
              </div>

              {/* Divider line â€“ only if not the last item */}
              {index !== counters.length - 1 && (
                <div
                  class={`minimal-divider hidden md:block absolute top-1/2 -translate-y-1/2 h-20 w-[3px] rounded-full 
      ${isArabic ? "left-[-2.5rem]" : "right-[-2.5rem]"}`}
                />
              )}
            </div>
          ))
        }
      </div>
    </div>
  </section>
</minimal-statistics-counter>

<script>
  import "./MinimalThemeTodayStatistics";
</script>