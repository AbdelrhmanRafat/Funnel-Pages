---
import "./MinimalThemeProduct.css";
import type { BlockData, Product } from "../../../../../lib/api/types";
import { getTranslation } from "../../../../../lib/utils/i18n/translations";
import type { Language } from "../../../../../lib/utils/i18n/translations";
import { MinimalProductInfoComponents } from "../../../../../lib/constants/themes";
import MinimalSelectionOptionsWithoutBundles from "../UI/MinimalSelectionOptionsVariantWithoutBundles/minimalSelectionOptionsWithoutBundles.astro";
import MinimalProductCosts from "../UI/MinimalProductCosts/minimalProductCosts.astro";
import MinimalProductGalleryComponent from "../UI/MinimalProductGallery/MinimalProductGalleryComponent.astro";
import MinimalOrderThroughWhatsapp from "../MinimalOrderThroughWhatsapp/minimalOrderThroughWhatsapp.astro";
import MinimalFakeVisitors from "../MinimalFakeVisitors/MinimalFakeVisitors.astro";
import MinimalCoupon from "../MinimalCoupon/MinimalCoupon.astro";
import MinimalProductBundles from "../MinimalProductBundles/MinimalProductBundles.astro";
import MinimalProductHeaderReact from "./MinimalProductHeaderReact";
import MinimalThemeFormFields from "../Minimal_FormFields/MinimalThemeFormFields.astro";
import MinimalOrderConfirmationNotice from "../Minimal_OrderConfirmationNotice/MinimalOrderConfirmationNotice.astro";

// Define render order for product info section - reorder as needed!
const PRODUCT_INFO_RENDER_ORDER = [
  MinimalProductInfoComponents.Visitores,
  MinimalProductInfoComponents.ProductHeader,
  MinimalProductInfoComponents.ProductDescription,
  MinimalProductInfoComponents.PurchaseOptions,
  MinimalProductInfoComponents.coupon,
  MinimalProductInfoComponents.FormFields,
  MinimalProductInfoComponents.OrderConfirmation,
  MinimalProductInfoComponents.OrderThroghWhatsapp,
];

// Retrieves product and purchaseOptions from Astro's props.
const product: Product = Astro.props.product;
const purchaseOptions: BlockData = Astro.props.purchaseOptions;
const formFieldsData: BlockData = Astro.props.formFieldsData;
const ratingData: BlockData = Astro.props.ratingData;
const orderThroughWhatsappData: BlockData =
  Astro.props.orderThroughWhatsappData;
const fakeVisitorsData: BlockData = Astro.props.fakeVisitorsData;
const cuponData: BlockData = Astro.props.cuponData;
const orderConfirmationNoticeData: BlockData =
  Astro.props.orderConfirmationNoticeData;

// Extracts color and size options from the product data
const isHaveVariant = product.is_have_variant;
// Get initial language from cookie during SSR
const currentLang: Language = (Astro.cookies.get("lang")?.value ||
  "en") as Language;
const isArabic = currentLang === "ar";

// Helper function to check if component data is available
interface ComponentCheckResult {
  isComponentFound: boolean;
  componentData: any;
}

function isComponentDataAvailable(
  componentType: MinimalProductInfoComponents,
): ComponentCheckResult {
  switch (componentType) {
    case MinimalProductInfoComponents.ProductHeader:
      return {
        isComponentFound: !!product,
        componentData: product,
      };
    case MinimalProductInfoComponents.ProductDescription:
      return {
        isComponentFound:
          !!product && (!!product.description_ar || !!product.description_en),
        componentData: product,
      };
    case MinimalProductInfoComponents.PurchaseOptions:
      return {
        isComponentFound: !!purchaseOptions,
        componentData: purchaseOptions,
      };
    case MinimalProductInfoComponents.FormFields:
      return {
        isComponentFound: !!formFieldsData,
        componentData: formFieldsData,
      };
    case MinimalProductInfoComponents.OrderConfirmation:
      return {
        isComponentFound: !!orderConfirmationNoticeData,
        componentData: orderConfirmationNoticeData,
      };
    case MinimalProductInfoComponents.OrderThroghWhatsapp:
      return {
        isComponentFound: !!orderThroughWhatsappData,
        componentData: orderThroughWhatsappData,
      };
    case MinimalProductInfoComponents.coupon:
      return {
        isComponentFound: !!cuponData,
        componentData: cuponData,
      };
    case MinimalProductInfoComponents.Visitores:
      return {
        isComponentFound: !!fakeVisitorsData,
        componentData: fakeVisitorsData,
      };
    default:
      return {
        isComponentFound: false,
        componentData: null,
      };
  }
}
---

<section id="minimal-product-details" class="minimal-product-details-section">
  <div class="flex flex-col lg:flex-row gap-5">
    <!-- Gallery Section -->
    {(<MinimalProductGalleryComponent product={product} />)}

    <!-- Product Info Section with Array-Based Rendering -->
    <div
      class="lg:w-1/2 minimal-product-details-container flex flex-col gap-3 justify-center items-center md:px-8 md:py-3 rounded-xl"
    >
      {
        PRODUCT_INFO_RENDER_ORDER.map((componentType) => {
          const componentCheck = isComponentDataAvailable(componentType);

          if (!componentCheck.isComponentFound) {
            return null;
          }

          // Product Header Component with Observer Web Component
          if (componentType === MinimalProductInfoComponents.ProductHeader) {
            return (
              <div class="w-full">
                <MinimalProductHeaderReact
                  product={product}
                  purchaseOptions={purchaseOptions}
                  isHaveVariant={isHaveVariant}
                  currentLang={currentLang}
                  ratingData={ratingData}
                  client:visible
                />
              </div>
            );
          }

          // Product Description Component
          if (
            componentType === MinimalProductInfoComponents.ProductDescription
          ) {
            return (
              <>
                <div class="w-full">
                  <h3
                    class="minimal-product-details-description-header text-2xl font-bold pb-3"
                    data-translate="product.description"
                  >
                    {getTranslation("product.description", currentLang)}
                  </h3>
                  <p
                    class="minimal-product-details-text-body leading-relaxed"
                    set:html={
                      isArabic ? product.description_ar : product.description_en
                    }
                  />
                </div>
                {!purchaseOptions && (
                  <>
                    <div class="w-full py-3">
                      <MinimalSelectionOptionsWithoutBundles
                        product={product}
                      />
                    </div>
                    <div class="w-full">
                      <MinimalProductCosts hasBundles="false" />
                    </div>
                  </>
                )}
              </>
            );
          }

          // Purchase Options Component
          if (componentType === MinimalProductInfoComponents.PurchaseOptions) {
            return (
              <MinimalProductBundles
                product={product}
                data={componentCheck.componentData}
              />
            );
          }

          // Coupon Component
          if (componentType === MinimalProductInfoComponents.coupon) {
            return <MinimalCoupon data={componentCheck.componentData} />;
          }

          // Form Fields Component
          if (componentType === MinimalProductInfoComponents.FormFields) {
            return (
              <MinimalThemeFormFields
                product={product}
                data={componentCheck.componentData}
                purchaseOptions={purchaseOptions}
                isHaveVariant={isHaveVariant}
              />
            );
          }

          // Order Confirmation Component
          if (
            componentType === MinimalProductInfoComponents.OrderConfirmation
          ) {
            return (
              <MinimalOrderConfirmationNotice
                data={componentCheck.componentData}
              />
            );
          }

          // Visitors Component
          if (componentType === MinimalProductInfoComponents.Visitores) {
            return <MinimalFakeVisitors data={componentCheck.componentData} />;
          }

          // Order Through WhatsApp Component
          if (
            componentType === MinimalProductInfoComponents.OrderThroghWhatsapp
          ) {
            return (
              <MinimalOrderThroughWhatsapp
                data={componentCheck.componentData}
              />
            );
          }

          return null;
        })
      }
    </div>
  </div>
</section>

<script>
  import "./MinimalThemeProduct";
</script>
