---
// RetroFaq.astro - Enhanced version
import "./RetroFaq.css";
import type { BlockData, Faqs, Item } from "../../../../../lib/api/types";
import type { Language } from "../../../../../lib/utils/i18n/translations";
import { FunnelRetroComponents } from "../../../../../lib/constants/themes";
import LucideIcon from "../../../../Shared/LucideIcon.astro";

// Get initial language from cookie during SSR
const currentLang: Language = (Astro.cookies.get("lang")?.value ||
    "ar") as Language;
const isArabic = currentLang === "ar";

const data: BlockData = Astro.props.data;
const faqs: Item[] = data.items ?? [];


---

<!-- FAQ Section Component for Astro -->
<section
    id={FunnelRetroComponents.RetroFaq}
    class="retro-section"
    aria-labelledby="faq-heading"
>
    <!-- Header -->
    <div class="retro-section-header">
        {data.icon && <LucideIcon name={data.icon as any} width="48" height="48"  />}
        <h5 id="faq-heading">{isArabic ? data.title_ar : data.title_en}</h5>
    </div>

    <!-- FAQ Items -->
    <faq-accordion
        class="flex flex-col gap-4"
        role="region"
        aria-labelledby="faq-heading"
    >
        {
            faqs.map((faq, index) => (
                <faq-item class="retro-faq-item overflow-hidden">
                    <button
                        class="retro-faq-question w-full p-6 flex items-center justify-between bg-transparent border-none cursor-pointer"
                        data-faq-button
                        type="button"
                    >
                        <span class="retro-faq-question-text font-medium">
                            {faq.label}
                        </span>
                        <span
                            class="retro-faq-icon text-xl font-light transition-transform duration-300 ease-in-out rotate-0"
                            data-faq-icon
                            aria-hidden="true"
                        >
                            +
                        </span>
                    </button>
                    <div
                        class="retro-faq-answer px-6 max-h-0 overflow-hidden"
                        data-faq-answer
                    >
                        <div class="retro-faq-answer-content leading-relaxed py-2">
                            {faq.content}
                        </div>
                    </div>
                </faq-item>
            ))
        }
    </faq-accordion>
</section>

<script>
    import "./RetroFaq";
</script>
