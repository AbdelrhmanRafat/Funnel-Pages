---
import "./retroProductCosts.css";
import { getTranslation } from "../../../../../../lib/utils/i18n/translations";

const hasBundles : string = Astro.props.hasBundles;
// Component configuration - no longer dependent on external data
const autoUpdate = Astro.props.autoUpdate ?? true;
const showDiscountWhenZero = Astro.props.showDiscountWhenZero ?? false;
const currency = Astro.props.currency ?? getTranslation('productFunnel.currency');
---

<retro-product-funnel
  data-funnel-auto-update={autoUpdate.toString()}
  data-funnel-show-discount-when-zero={showDiscountWhenZero.toString()}
  data-funnel-currency={currency}
  data-funnel-has-bundles={hasBundles}
>
  <div class="retro-product-costs-container">
    <div class="retro-product-costs-body">
      <div class="retro-product-costs-content space-y-3">
        <div class="retro-product-costs-row flex justify-between items-center">
          <span class="retro-product-costs-label" data-translate="productFunnel.quantity">
            {getTranslation('productFunnel.quantity')}
          </span>
          <div>
            <span class="retro-product-costs-value" data-funnel-price-quantity>0</span>
            <span data-translate="productFunnel.piece">
              {getTranslation('productFunnel.piece')}
            </span>
          </div>
        </div>
        
        <div class="retro-product-costs-row flex justify-between items-center">
          <span class="retro-product-costs-label" data-translate="productFunnel.unitPrice">
            {getTranslation('productFunnel.unitPrice')}
          </span>
          <span class="retro-product-costs-value" data-funnel-price-unit>
            0 {getTranslation('productFunnel.currency')}
          </span>
        </div>
        
        <div class="retro-product-costs-row flex justify-between items-center">
          <span class="retro-product-costs-label" data-translate="productFunnel.subtotal">
            {getTranslation('productFunnel.subtotal')}
          </span>
          <span class="retro-product-costs-value" data-funnel-price-subtotal>
            0 {getTranslation('productFunnel.currency')}
          </span>
        </div>
        { hasBundles === "true" && 
        <div class="retro-product-costs-row flex justify-between items-center">
          <span class="retro-product-costs-label" data-translate="productFunnel.shippingCost">
            {getTranslation('productFunnel.shippingCost')}
          </span>
          <span class="retro-product-costs-value" data-funnel-price-shipping>
            0 {getTranslation('productFunnel.currency')}
          </span>
        </div>
        }
        <div
          class:list={[
            "retro-product-costs-row flex justify-between items-center",
            { "hidden": !showDiscountWhenZero }
          ]}
          data-funnel-discount-container
        >
          <span class="retro-product-costs-label" data-translate="productFunnel.discount">
            {getTranslation('productFunnel.discount')}
          </span>
          <span class="retro-product-costs-discount" data-funnel-price-discount>
            - 0 {getTranslation('productFunnel.currency')}
          </span>
        </div>
      </div>
      
      <div class="retro-product-costs-total-section">
        <div class="flex justify-between items-center">
          <span class="retro-product-costs-total-label" data-translate="productFunnel.total">
            {getTranslation('productFunnel.total')}
          </span>
          <span class="retro-product-costs-total-value" data-funnel-price-total>
            0 {getTranslation('productFunnel.currency')}
          </span>
        </div>
      </div>
    </div>
  </div>
</retro-product-funnel>

<script>
  import "./retroProductCosts";
</script>