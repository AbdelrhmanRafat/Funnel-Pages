---
import "./RetroBundleOptions.css";
import type { PurchaseOption, Product } from "../../../../../../lib/api/types";
import { getTranslation, type Language } from "../../../../../../lib/utils/i18n/translations";
import RetroBundleOptionsReact from "./RetroBundleOptionsReact.tsx";

const data: PurchaseOption[] = Astro.props.data;
const product: Product = Astro.props.product;
const name = "qty";

// Get current language for translations
const currentLang: Language = (Astro.cookies.get("lang")?.value || "ar") as Language;

const reactProps = {
  data,
  product,
  name,
  currentLang,
};
---

<RetroBundleOptionsReact {...reactProps} client:visible />