---
import "./retroThemeTextBar.css";
import type { BlockData } from "../../../../../lib/api/types";
import type { Language } from "../../../../../lib/utils/i18n/translations";
import { FunnelRetroComponents } from "../../../../../lib/constants/themes";

// Get initial language from cookie during SSR
const currentLang: Language = (Astro.cookies.get("lang")?.value || "en") as Language;
const isArabic = currentLang === "ar";

const data: BlockData = Astro.props.data;
---

<section 
  id={FunnelRetroComponents.RetroTextBar} 
  class="retro-section py-12"
>
  <div class="retro-text-bar-container flex justify-center items-center">
    <div class="retro-text-bar-animated-button">
      <span class="retro-text-bar-title">
        {isArabic ? data.title_ar : data.title_en}
      </span>
    </div>
  </div>
</section>