---
import type { BlockData, Product } from "../../../../../lib/api/types";

const data: BlockData[] = Astro.props.data;
const product : Product = Astro.props.product;

import { FunnelRetroComponents } from "../../../../../lib/constants/themes";
import RetroProductCosts from "../UI/RetroProductCosts/retroProductCosts.astro";
import RetroBundleOptions from "../UI/RetroBundleOptions/RetroBundleOptions.astro";

---

<div id={FunnelRetroComponents.RetroProductFunnel} class="w-full flex flex-col gap-2">
  <RetroBundleOptions data={data} product={product} />
  <RetroProductCosts hasBundles="true" />
</div>