---
import "./RetroThemeProduct.css";
import type { BlockData, Product } from "../../../../../lib/api/types";
import { getTranslation } from "../../../../../lib/utils/i18n/translations";
import type { Language } from "../../../../../lib/utils/i18n/translations";
import { RetroProductInfoComponents } from "../../../../../lib/constants/themes";
import RetroSelectionOptionsWithoutBundles from "../UI/RetroSelectionOptionsVariantWithoutBundles/retroSelectionOptionsWithoutBundles.astro";
import RetroProductCosts from "../UI/RetroProductCosts/retroProductCosts.astro";
import RetroProductGalleryComponent from "../UI/RetroProductGallery/RetroProductGalleryComponent.astro";
import RetroOrderThroughWhatsapp from "../RetroOrderThroughWhatsapp/retroOrderThroughWhatsapp.astro";
import RetroFakeVisitors from "../RetroFakeVisitors/RetroFakeVisitors.astro";
import RetroCoupon from "../RetroCoupon/RetroCoupon.astro";
import RetroProductBundles from "../RetroProductBundles/RetroProductBundles.astro";
import RetroProductHeaderReact from "./RetroProductHeaderReact";
import RetroThemeFormFields from "../Retro_FormFields/RetroThemeFormFields.astro";
import RetroOrderConfirmationNotice from "../Retro_OrderConfirmationNotice/RetroOrderConfirmationNotice.astro";

// Define render order for product info section - reorder as needed!
const PRODUCT_INFO_RENDER_ORDER = [
  RetroProductInfoComponents.Visitores,
  RetroProductInfoComponents.ProductHeader,
  RetroProductInfoComponents.ProductDescription,
  RetroProductInfoComponents.PurchaseOptions,
  RetroProductInfoComponents.coupon,
  RetroProductInfoComponents.FormFields,
  RetroProductInfoComponents.OrderConfirmation,
  RetroProductInfoComponents.OrderThroghWhatsapp,
];

// Retrieves product and purchaseOptions from Astro's props.
const product: Product = Astro.props.product;
const purchaseOptions: BlockData = Astro.props.purchaseOptions;
const formFieldsData: BlockData = Astro.props.formFieldsData;
const ratingData: BlockData = Astro.props.ratingData;
const orderThroughWhatsappData: BlockData =
  Astro.props.orderThroughWhatsappData;
const fakeVisitorsData: BlockData = Astro.props.fakeVisitorsData;
const cuponData: BlockData = Astro.props.cuponData;
const orderConfirmationNoticeData: BlockData =
  Astro.props.orderConfirmationNoticeData;

// Extracts color and size options from the product data
const isHaveVariant = product.is_have_variant;
// Get initial language from cookie during SSR
const currentLang: Language = (Astro.cookies.get("lang")?.value ||
  "ar") as Language;
const isArabic = currentLang === "ar";

// Helper function to check if component data is available
interface ComponentCheckResult {
  isComponentFound: boolean;
  componentData: any;
}

function isComponentDataAvailable(
  componentType: RetroProductInfoComponents,
): ComponentCheckResult {
  switch (componentType) {
    case RetroProductInfoComponents.ProductHeader:
      return {
        isComponentFound: !!product,
        componentData: product,
      };
    case RetroProductInfoComponents.ProductDescription:
      return {
        isComponentFound:
          !!product && (!!product.description_ar || !!product.description_en),
        componentData: product,
      };
    case RetroProductInfoComponents.PurchaseOptions:
      return {
        isComponentFound: !!purchaseOptions,
        componentData: purchaseOptions,
      };
    case RetroProductInfoComponents.FormFields:
      return {
        isComponentFound: !!formFieldsData,
        componentData: formFieldsData,
      };
    case RetroProductInfoComponents.OrderConfirmation:
      return {
        isComponentFound: !!orderConfirmationNoticeData,
        componentData: orderConfirmationNoticeData,
      };
    case RetroProductInfoComponents.OrderThroghWhatsapp:
      return {
        isComponentFound: !!orderThroughWhatsappData,
        componentData: orderThroughWhatsappData,
      };
    case RetroProductInfoComponents.coupon:
      return {
        isComponentFound: !!cuponData,
        componentData: cuponData,
      };
    case RetroProductInfoComponents.Visitores:
      return {
        isComponentFound: !!fakeVisitorsData,
        componentData: fakeVisitorsData,
      };
    default:
      return {
        isComponentFound: false,
        componentData: null,
      };
  }
}
---

<section id="retro-product-details" class="retro-product-details-section">
  <div class="flex flex-col lg:flex-row gap-5">
    <!-- Gallery Section -->
    {(<RetroProductGalleryComponent product={product} />)}

    <!-- Product Info Section with Array-Based Rendering -->
    <div
      class="lg:w-1/2 retro-product-details-container flex flex-col gap-3 justify-center items-center md:px-8 md:py-3 rounded-xl"
    >
      {
        PRODUCT_INFO_RENDER_ORDER.map((componentType) => {
          const componentCheck = isComponentDataAvailable(componentType);

          if (!componentCheck.isComponentFound) {
            return null;
          }

          // Product Header Component with Observer Web Component
          if (componentType === RetroProductInfoComponents.ProductHeader) {
            return (
              <div class="w-full">
                <RetroProductHeaderReact
                  product={product}
                  purchaseOptions={purchaseOptions}
                  isHaveVariant={isHaveVariant}
                  currentLang={currentLang}
                  ratingData={ratingData}
                  client:visible
                />
              </div>
            );
          }

          // Product Description Component
          if (
            componentType === RetroProductInfoComponents.ProductDescription
          ) {
            return (
              <>
                <div class="w-full">
                  <h3
                    class="retro-product-details-description-header text-2xl font-bold pb-3"
                    data-translate="product.description"
                  >
                    {getTranslation("product.description", currentLang)}
                  </h3>
                  <p
                    class="retro-product-details-text-body leading-relaxed"
                    set:html={
                      isArabic ? product.description_ar : product.description_en
                    }
                  />
                </div>
                {!purchaseOptions && (
                  <>
                    <div class="w-full py-3">
                      <RetroSelectionOptionsWithoutBundles
                        product={product}
                      />
                    </div>
                    <div class="w-full">
                      <RetroProductCosts hasBundles="false" />
                    </div>
                  </>
                )}
              </>
            );
          }

          // Purchase Options Component
          if (componentType === RetroProductInfoComponents.PurchaseOptions) {
            return (
              <RetroProductBundles
                product={product}
                data={componentCheck.componentData}
              />
            );
          }

          // Coupon Component
          if (componentType === RetroProductInfoComponents.coupon) {
            return <RetroCoupon data={componentCheck.componentData} />;
          }

          // Form Fields Component
          if (componentType === RetroProductInfoComponents.FormFields) {
            return (
              <RetroThemeFormFields
                product={product}
                data={componentCheck.componentData}
                purchaseOptions={purchaseOptions}
                isHaveVariant={isHaveVariant}
              />
            );
          }

          // Order Confirmation Component
          if (
            componentType === RetroProductInfoComponents.OrderConfirmation
          ) {
            return (
              <RetroOrderConfirmationNotice
                data={componentCheck.componentData}
              />
            );
          }

          // Visitors Component
          if (componentType === RetroProductInfoComponents.Visitores) {
            return <RetroFakeVisitors data={componentCheck.componentData} />;
          }

          // Order Through WhatsApp Component
          if (
            componentType === RetroProductInfoComponents.OrderThroghWhatsapp
          ) {
            return (
              <RetroOrderThroughWhatsapp
                data={componentCheck.componentData}
              />
            );
          }

          return null;
        })
      }
    </div>
  </div>
</section>

<script>
  import "./RetroThemeProduct";
</script>
