---
import type { BlockData, Product } from "../../../../../lib/api/types";

const data: BlockData[] = Astro.props.data;
const product : Product = Astro.props.product;

import { FunnelTechnoComponents } from "../../../../../lib/constants/themes";
import TechnoProductCosts from "../UI/TechnoProductCosts/technoProductCosts.astro";
import TechnoBundleOptions from "../UI/TechnoBundleOptions/TechnoBundleOptions.astro";

---

<div id={FunnelTechnoComponents.TechnoProductFunnel} class="w-full flex flex-col gap-2">
  <TechnoBundleOptions data={data} product={product} />
  <TechnoProductCosts hasBundles="true" />
</div>